_pkgname=python-gnutls
pkgname=python2-gnutls
pkgver=1.2.5
pkgrel=1
pkgdesc="Python wrapper for the GNUTLS library"
arch=(x86_64)
license=('LGPL')
depends=('python2')
replaces=('python-gnutls')
url="http://ag-projects.com/"
source=("http://pypi.python.org/packages/source/p/${_pkgname}/${_pkgname}-${pkgver}.tar.gz"
	libraryinit.patch
        libraryfunctions.patch)
md5sums=('a398a75b1f366857cf2628cf4d62dd34'
         '7b2764a11dfe1261c6461b5eceb665dc'
         'e06d650fda8005b89a353ff0bfd1affb')

build() {
  cd ${srcdir}/python-gnutls-${pkgver}
  patch -Np0 <$srcdir/libraryinit.patch
  patch -Np0 <$srcdir/libraryfunctions.patch
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python2 setup.py install --prefix=/usr --root="${pkgdir}"
}

