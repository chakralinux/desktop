# contributor Neo Kolokotronis <tetris4@gmail.com>

pkgname=qiviewer
pkgver=0.3.2
pkgrel=1
pkgdesc="Another image viewer written in Qt4 -this is the one with gif rotation-"
arch=('i686' 'x86_64')
url="http://code.google.com/p/qiviewer"
license=('GPL2')
depends=('qt')
makedepends=('qt')
source=(http://qiviewer.googlecode.com/files/qiviewer-${pkgver}.tar.bz2)
sha1sums=('f6245a79450c6ed45a012b4b1be8222acfd5705f')

build() {
        cd "${srcdir}"/$pkgname/src
        qmake PREFIX="$(kde4-config --prefix)"
        make
}
package() {
	cd "${srcdir}"/${pkgname}/src
        make install INSTALL_ROOT="${pkgdir}"
}

