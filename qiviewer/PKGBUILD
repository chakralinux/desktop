pkgname=qiviewer
pkgver=0.4.0
pkgrel=1
pkgdesc="A lightweight image viewer written with help of Qt library"
arch=('i686' 'x86_64')
url="http://code.google.com/p/qiviewer"
license=('GPL2')
depends=('qt')
makedepends=('qt')
source=(http://qiviewer.googlecode.com/files/qiviewer-${pkgver}.tar.bz2)
sha1sums=('47a26c622270ab86c636becb80a61b22b1cb9aa6')

build() {
        cd "${srcdir}"/$pkgname/src
        qmake PREFIX=/usr
        make
}
package() {
	cd "${srcdir}"/${pkgname}/src
        make install INSTALL_ROOT="${pkgdir}"
}

