# Include global configuration
source ../kdeapps.conf

_pkgname="poxml"
pkgname="kdesdk-poxml"
arch=('x86_64')
pkgver=${_kdever}
pkgrel=1
pkgdesc="Tools for using .po-files to translate DocBook XML files"
depends=("kde-runtime>=${_kdever}" 'qt' 'antlr2')
conflicts=('kdesdk-doc')
groups=("kde" "kde-devel" "kde-uninstall" "kdesdk")
categories=('programming')
install=kdesdk.install
provides="poxml"
url="http://www.kde.org"
license=('GPL' 'LGPL' 'FDL')
options=('docs' '!header' 'debug' 'log')
makedepends=('pkg-config' 'cmake' 'automoc4' 'java-runtime')
source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
sha256sums=(`grep ${_pkgname}-$_kdever.tar.xz  ../checksums.txt | cut -d " " -f1`)

build() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    cmake . \
        -DCMAKE_BUILD_TYPE=${_build_type} \
        -DCMAKE_INSTALL_PREFIX=${_installprefix} \
        -DCMAKE_SKIP_RPATH=ON 
    make 
}

package() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install
}
