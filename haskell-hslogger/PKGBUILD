_hkgname=hslogger
pkgname=haskell-hslogger
pkgver=1.2.3
pkgrel=2
pkgdesc="Versatile logging framework"
url="http://hackage.haskell.org/package/hslogger"
license=('custom:BSD3')
arch=('x86_64' 'i686')
makedepends=()
depends=('ghc=7.6.3-1' 'haskell-base>=4.0' 'haskell-containers' 'haskell-directory' 'haskell-mtl' 'haskell-network<2.5' 'haskell-old-locale' 'haskell-process' 'haskell-time')
options=('strip')
source=("http://hackage.haskell.org/packages/archive/hslogger/1.2.3/hslogger-1.2.3.tar.gz")
install="haskell-hslogger.install"
sha512sums=('ebf1108efd8ecbcd8b67c3ce646f5ffde3f95ff8092ab8f9d0fb00b1207fc69db45b2abfdf71312b32e86d922672f88ca6dfce15c0c7371fc78dc223fdf61356')

build() {
    cd "${srcdir}/hslogger-1.2.3"
    runhaskell Setup configure \
        -O \
        ${PKGBUILD_HASKELL_ENABLE_PROFILING:+-p } \
        --enable-split-objs \
        --enable-shared \
        --prefix="/usr" \
        --docdir="/usr/share/doc/haskell-hslogger" \
        --libsubdir='$compiler/site-local/$pkgid'
    runhaskell Setup build
    runhaskell Setup haddock
    runhaskell Setup register   --gen-script
    runhaskell Setup unregister --gen-script
    sed -i -r -e "s|ghc-pkg.*unregister[^ ]* |&'--force' |" unregister.sh
}

package() {
    cd "${srcdir}/hslogger-1.2.3"
    install -D -m744 register.sh \
        "${pkgdir}/usr/share/haskell/haskell-hslogger/register.sh"
    install -m744 unregister.sh \
        "${pkgdir}/usr/share/haskell/haskell-hslogger/unregister.sh"
    install -d -m755 "${pkgdir}/usr/share/doc/ghc/html/libraries"

    # Documentation
    ln -s "/usr/share/doc/haskell-hslogger/html" \
        "${pkgdir}/usr/share/doc/ghc/html/libraries/hslogger"

    # License
    install -D -m644 LICENSE \
        "${pkgdir}/usr/share/licenses/haskell-hslogger/LICENSE"
    rm -f "${pkgdir}/usr/share/doc/haskell-hslogger/LICENSE"

    runhaskell Setup copy --destdir="${pkgdir}"
}
