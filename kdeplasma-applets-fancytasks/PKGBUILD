#
# KDEPlasma Packages for Chakra, part of chakra-project.org
#
# maintainer abveritas@chakra-project.org

pkgname=kdeplasma-applets-fancytasks
pkgver=1.1.2
pkgrel=2
pkgdesc="Plasmoid Binary"
arch=('x86_64')
url="http://www.kde-look.org/content/show.php/Fancy+Tasks?content=99737"
license=('GPL')
depends=('kde-workspace')
makedepends=('cmake' 'automoc4' 'kde-baseapps')
categories=('accessories')
screenshot=('http://kde-apps.org/CONTENT/content-pre1/99737-1.png')
source=("https://opendesktop.org/CONTENT/content-files/99737-fancytasks-${pkgver}.tar.bz2")
sha256sums=('80ecc4956b76da68578544be56e3fdc0315f6d682d1e3404bce84236976c709c')

build() {
  cd fancytasks-${pkgver}
  [[ -d build ]] && rm -fR build
  mkdir build && cd build
  cmake ../ -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix`
  make
}

package() {
  cd fancytasks-${pkgver}/build
  make DESTDIR="${pkgdir}" install
}

