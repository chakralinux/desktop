post_install() {
	cat <<-'EOF'
		#   GTK - Integration v1.4-1
		#  
		#   If you want GTK+ apps or bundles run with root privileges to be themed as well
		#   copy your `~/.gtkrc-2.0-kde4' file to `/root/gtkrc-2.0'
		#
		#   sudo cp ~/.gtkrc-2.0-kde4 /root/.gtkrc-2.0
	EOF
}

post_upgrade() {
	post_install $1
}

op=$1
shift
$op $*
