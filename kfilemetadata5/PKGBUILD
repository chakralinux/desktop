# Contributor: Andrea Scarpino <andrea@archlinux.org>

source ../plasma.conf

pkgname=kfilemetadata5
_pkgname=kfilemetadata
pkgver=${PVersion}
pkgrel=1
pkgdesc='Library providing Job- and Qeueinterfaces'
arch=('i686' 'x86_64')
url='projects.kde.org/'
license=('LGPL')
depends=('qt5-base' 'karchive' 'kservice')
makedepends=('extra-cmake-modules')
checkdepends=("cmake")
groups=('plasma')
options=("debug")
source=("${PServer}/${pkgver}/${_pkgname}-${PSubVersion}.tar.xz")
sha256sums=( $(getSum ${_pkgname}) )

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake_kf5 ../${_pkgname}-${pkgver} 
  make
}

check() {
  cd build
  make test
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
