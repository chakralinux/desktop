# Contributor: Andrea Scarpino <andrea@archlinux.org>

source ../plasma.conf

pkgname=libbluedevil-kf5
_pkgname=libbluedevil
pkgver=${PVersion}
pkgrel=1
pkgdesc="Library for making window decoration"
arch=('x86_64')
url='projects.kde.org/'
license=('LGPL')
depends=('qt5-base')
makedepends=('extra-cmake-modules' 'kdoctools' 'python3')
checkdepends=("cmake")
groups=('plasma')
options=("debug")
source=("${PServer}/${pkgver}/${_pkgname}-${PSubVersion}.tar.xz")
sha256sums=( $(getSum ${_pkgname}) )

prepare() {
  mkdir -p build

  cd ${_pkgname}-${pkgver}
}

build() {
  cd build
  cmake_kf5 ../${_pkgname}-${pkgver} \
    -DPYTHON_EXECUTABLE=/usr/bin/python3
  make
}

check() {
  cd build
  make test || return 0
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
