# Maintainer: Manuel Tortosa <manutortosa@chakra-project@org>

# Include global configuration
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdeedu-kalzium
_pkgname=kalzium
pkgver=${_kdever}
pkgrel=3
pkgdesc="Periodic Table of Elements"
url="http://kde.org/applications/education/kalzium/"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=("kdelibs>=${_kdever}" "avogadro" "ocaml" "facile" "chemical-mime-data")
makedepends=('cmake' 'automoc4' 'gnome-mime-data')
provides=('kalzium')
groups=("kde" "kdeedu" "kde-uninstall")
categories=('education')
options=('docs' '!header' 'debug' 'log')
install=${pkgname}.install

source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
sha256sums=(`grep ${_pkgname}-$_kdever.tar.xz  ../checksums.txt | cut -d " " -f1`)

build() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
                -DCMAKE_INSTALL_PREFIX=${_installprefix} \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'

}

package() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install || return 1

}
sha256sums=('92477595256e35acb1cc1399fa0ab045f1dc1e844d675986828a4940a0fc796f')
