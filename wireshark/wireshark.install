
update_cache() {
    update-desktop-database -q
}

post_install() {
    post_upgrade
    echo "NOTE: To run wireshark as normal user you have to add yourself into wireshark group"
}

post_upgrade() {
    update_cache

    setcap 'CAP_NET_RAW+eip CAP_NET_ADMIN+eip CAP_DAC_OVERRIDE+eip' usr/bin/dumpcap
}
