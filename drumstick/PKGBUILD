Arch contribution https://www.archlinux.org/packages/community/x86_64/drumstick/

pkgname=drumstick
pkgver=1.0.0
pkgrel=1
pkgdesc="MIDI libraries for Qt5/C++"
arch=('x86_64')
url="http://drumstick.sourceforge.net/"
license=('GPL')
depends=('desktop-file-utils' 'fluidsynth' 'hicolor-icon-theme' 'shared-mime-info' 'qt5-svg')
makedepends=('cmake' 'doxygen' 'docbook-xsl')
install="$pkgname.install"
source=("http://downloads.sourceforge.net/$pkgname/$pkgver/$pkgname-$pkgver.tar.bz2")
sha512sums=('631ea32ab1a611266c650d6e9c4be564556f9c965c85a600097bbe909d594f601c917ff9fb46af444a0907472dd522e61bca6d4111ad6b1beec06ae267c5e33a')

prepare() {
  cd $pkgname-$pkgver
  [ -d b ] || mkdir b
}

build() {
  cd $pkgname-$pkgver/b
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr \
           -DCMAKE_BUILD_TYPE=Release \
           -DLIB_SUFFIX=
  make
}

package() {
  cd $pkgname-$pkgver/b
  make DESTDIR="$pkgdir/" install
}
