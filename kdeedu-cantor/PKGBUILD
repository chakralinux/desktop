# maintainer (i686): Phil Miller <philm[at]chakra-project[dog]org>
# maintainer (x86_64): Manuel Tortosa <manutortosa[at]chakra-project[dot]org>

# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

#
# package info
#
pkgname=kdeedu-cantor
_pkgname=cantor
pkgver=${_kdever}
pkgrel=2
pkgdesc="KDE Frontend to Mathematical Software"
url="http://kde.org/applications/education/cantor/"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=("kde-runtime>=${_kdever}" 'r' 'libspectre')
makedepends=('cmake' 'automoc4' 'docbook-xsl' 'icu' 'kdeedu-kalgebra')
provides=('cantor')
groups=("kde" "kdeedu" "kde-uninstall")
options=('!splithdr' 'splitdbg' 'log')
install=${pkgname}.install

source=("$_mirror/${_pkgname}-$_kdever.tar.bz2")
md5sums=(`grep ${_pkgname}-$_kdever.tar.bz2 ../kde-sc.md5 | cut -d" " -f1`)

build()
{
	cd ${srcdir}/${_pkgname}-${pkgver}
	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
                -DCMAKE_INSTALL_PREFIX=${_installprefix} \
                -DCMAKE_SKIP_RPATH=OFF
#                -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'

}

package()
{
	cd ${srcdir}/${_pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install || return 1

}
