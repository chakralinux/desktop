# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=skrooge
pkgver=0.9.0
pkgrel=2
pkgdesc="Allows you to manage your personal finances in KDE"
arch=('i686' 'x86_64')
url="http://skrooge.org"
license=('GPL')
depends=('kde-runtime' 'libofx' 'qca')
makedepends=('cmake' 'automoc4' 'docbook-xsl')
opdepends=('qca-ossl: for file-encryption, setting password')
install=${pkgname}.install
source=(http://skrooge.org/files/${pkgname}-${pkgver}.tar.bz2)
md5sums=('340cbec2ddc2a258bd9b5091dbdb5e92')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  cmake . -DCMAKE_BUILD_TYPE=Release \
	  -DCMAKE_INSTALL_PREFIX=/usr

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
