# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kftpgrabber-svn
pkgver=1101862
pkgrel=1
pkgdesc="A graphical FTP client for KDE"
url="http://kftp.org"
arch=('i686' 'x86_64')
license=('GPL')
conflicts=('kftpgrabber')
provides=('kftpgrabber')
depends=('kdebase-runtime' 'kdelibs' 'libssh2')
makedepends=('subversion' 'cmake' 'automoc4')
source=('FindLibSSH2.patch')
md5sums=('5a33e73a4e1fc122ac9697ebeba6b247')

_svntrunk=svn://websvn.kde.org/home/kde/trunk/extragear/network/kftpgrabber/
_svnmod=kftpgrabber

build() {
  cd $srcdir

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  patch -Np0 -i ${srcdir}/FindLibSSH2.patch

  mkdir build
  cd build
  cmake ../$_svnmod \
    -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` \
    -DCMAKE_BUILD_TYPE=Release
  make  || return 1
}

package() {
  cd ${srcdir}/build
  make DESTDIR=$pkgdir install || return 1

  rm -rf ${srcdir}/build
}