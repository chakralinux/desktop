# from AUR package http://aur.archlinux.org/packages.php?ID=12130

pkgname=cgdb
pkgver=0.6.7
pkgrel=1
pkgdesc="Curses-based interface to the GNU Debugger"
arch=('x86_64')
url="http://cgdb.sourceforge.net/"
license=('GPL')
depends=('readline' 'ncurses' 'gdb')
categories=('programming')
source=("http://cgdb.me/files//$pkgname-$pkgver.tar.gz")
md5sums=('e2d9a973d2683faf8130a82703bf6a31')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
