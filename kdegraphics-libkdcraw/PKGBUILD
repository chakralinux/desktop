# Contributions from Arch: https://projects.archlinux.org/svntogit/packages.git/tree/trunk?h=packages/libkdcraw
# Include global configuration
source ../kdeapps.conf

pkgname=kdegraphics-libkdcraw
_pkgname=libkdcraw
pkgver=${_kdever}
pkgrel=1
pkgdesc="A C++ library for decoding RAW picture files"
arch=('x86_64')
url="https://projects.kde.org/projects/kde/kdegraphics/libs/libkdcraw"
license=('GPL' 'LGPL' 'FDL')
depends=("kdelibs>=${_libsver}" 'lcms' 'libjpeg' 'libraw')
makedepends=('pkg-config' 'cmake' 'automoc4')
groups=('kde' 'kdegraphics' 'kde-uninstall')
conflicts=('kdegraphics-doc' 'libkdcraw')
provides=('libkdcraw')
options=('docs' '!header' 'debug' 'log')
source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
sha256sums=(`grep ${_pkgname}-$_kdever.tar.xz  ../checksums.txt | cut -d " " -f1`)

build() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    cmake . \
        -DCMAKE_BUILD_TYPE=${_build_type} \
        -DCMAKE_INSTALL_PREFIX=${_installprefix} \
        -DCMAKE_SKIP_RPATH=ON \
        -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'
}

package() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install
}
