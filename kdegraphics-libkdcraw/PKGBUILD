# Include global configuration
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdegraphics-libkdcraw
_pkgname=libkdcraw
pkgver=${_kdever}
pkgrel=3
pkgdesc="A C++ library for decoding RAW picture files"
arch=('x86_64')
url="https://projects.kde.org/projects/kde/kdegraphics/libs/libkdcraw"
license=('GPL'
         'LGPL'
         'FDL')
depends=("kdelibs>=${_kdever}"
         'lcms'
         'libjpeg'
         'libraw')
makedepends=('pkg-config'
             'cmake'
             'automoc4')
source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
sha256sums=(`grep ${_pkgname}-$_kdever.tar.xz  ../checksums.txt | cut -d " " -f1`)
groups=('kde'
        'kdegraphics'
        'kde-uninstall')
conflicts=('kdegraphics-doc'
           'libkdcraw')
provides=('libkdcraw')
options=('docs'
         '!header'
         'debug'
         'log')

build() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    cmake . \
        -DCMAKE_BUILD_TYPE=${_build_type} \
        -DCMAKE_INSTALL_PREFIX=${_installprefix} \
        -DCMAKE_SKIP_RPATH=ON \
        -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'
}

package() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install
}
sha256sums=('8e2b33c06d649602c4a980bd39046a64827c940a60e224836607276e89a361dd')
