_hkgname=hasktags
pkgname=haskell-hasktags
pkgver=0.68.2
pkgrel=2
pkgdesc="Produces ctags “tags” and etags “TAGS” files for Haskell software"
url="http://hackage.haskell.org/package/hasktags"
license=('custom:BSD3')
arch=('x86_64' 'i686')
makedepends=()
depends=('ghc=7.6.3-1' 'haskell-base<6' 'haskell-bytestring' 'haskell-directory' 'haskell-filepath')
options=()
source=("http://hackage.haskell.org/packages/archive/hasktags/0.68.2/hasktags-0.68.2.tar.gz")
install="haskell-hasktags.install"
sha512sums=('31ded9f08e5bb62424a04128f6b9a4e2791c4b20278eb1b5a72fa85df3d2753e0fa68ced4cd8fc05123295a4fe5b65b5cd4261e856b85475c9c4b65d1a343b6f')

build() {
    cd "${srcdir}/hasktags-0.68.2"
    runhaskell Setup configure \
        -O \
        ${PKGBUILD_HASKELL_ENABLE_PROFILING:+-p } \
        --enable-split-objs \
        --enable-shared \
        --prefix="/usr" \
        --docdir="/usr/share/doc/haskell-hasktags" \
        --libsubdir='$compiler/site-local/$pkgid'
    runhaskell Setup build
    runhaskell Setup haddock
    runhaskell Setup register   --gen-script
    runhaskell Setup unregister --gen-script
    sed -i -r -e "s|ghc-pkg.*unregister[^ ]* |&'--force' |" unregister.sh
}

package() {
    cd "${srcdir}/hasktags-0.68.2"
    install -D -m744 register.sh \
        "${pkgdir}/usr/share/haskell/haskell-hasktags/register.sh"
    install -m744 unregister.sh \
        "${pkgdir}/usr/share/haskell/haskell-hasktags/unregister.sh"
    install -d -m755 "${pkgdir}/usr/share/doc/ghc/html/libraries"

    # Documentation
    ln -s "/usr/share/doc/haskell-hasktags/html" \
        "${pkgdir}/usr/share/doc/ghc/html/libraries/hasktags"

    # License
    install -D -m644 LICENSE \
        "${pkgdir}/usr/share/licenses/haskell-hasktags/LICENSE"
    rm -f "${pkgdir}/usr/share/doc/haskell-hasktags/LICENSE"

    runhaskell Setup copy --destdir="${pkgdir}"
}
