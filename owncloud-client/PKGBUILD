_name=client
pkgname=owncloud-client
pkgver=2.1.0
pkgrel=1
pkgdesc="ownCloud client based on mirall"
arch=('x86_64')
url="http://owncloud.org/"
screenshot="http://owncloud.org/wp-content/uploads/2012/03/linux3.png"
license=('GPL2')
depends=('qtkeychain-qt5' 'qt5-webkit' 'hicolor-icon-theme')
makedepends=('cmake' 'python3-sphinx' 'qt5-tools' 'doxygen')
groups=('network')
conflicts=('csync-owncloud')
backup=('etc/owncloud-client/sync-exclude.lst')
install=${pkgname}.install
source=("https://github.com/owncloud/client/archive/v${pkgver}.tar.gz")
sha256sums=('5859dee902bce91d322d8d11e4940871ca00747c4115874a1b11c46050344843')

build() {
  mkdir -p build && cd build

  cmake ../${_name}-${pkgver} \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_SYSCONFDIR=/etc/${pkgname} \
        
  make
  make doc-man
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
