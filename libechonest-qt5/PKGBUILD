pkgname=libechonest-qt5
_pkgname=libechonest
pkgver=2.3.1
pkgrel=1
pkgdesc="C++ library for interfacing with Echo Nest"
arch=('x86_64')
url="https://projects.kde.org/projects/playground/libs/libechonest"
license=('GPL')
depends=('qt5-base')
makedepends=('cmake')
provides=('libechonest')
source=(http://files.lfranchi.com/${_pkgname}-${pkgver}.tar.bz2)
sha1sums=('9d7245c71e707651a7054ce6f0d90b9a62004b23')

prepare() {
  [[ -e ${srcdir}/build ]] && rm -rf ${srcdir}/build
  mkdir ${srcdir}/build
}

build() {
  cd ${srcdir}/build

  cmake ${srcdir}/${_pkgname}-${pkgver} \
        -DCMAKE_INSTALL_PREFIX=/usr \ 
        -DCMAKE_BUILD_TYPE=Release \
        -DECHONEST_BUILD_TESTS=OFF \
        -DBUILD_WITH_QT4=off
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
