# maintainer abevritas@chakra-project.org
# contributor kote martini438[at]gmail.com

pkgname=jreen
_name=lib${pkgname}
pkgver=1.2.0	
pkgrel=1
pkgdesc="Qt XMPP library"
arch=('x86_64')
url="https://github.com/euroelessar/jreen"
license=('GPL2')
depends=('libidn' 'qca' 'zlib' 'libgsasl' 'speex')
makedepends=('cmake')
conflicts=('jreen-git')
options=(!strip)
source=("https://github.com/euroelessar/$pkgname/archive/v$pkgver.tar.gz")
md5sums=('a7d2480c789173c4f836c14a97f66b51')

build() {
  cd $srcdir/$pkgname-$pkgver
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=release
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
