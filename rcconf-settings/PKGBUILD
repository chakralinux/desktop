# maintainer (i686): Phil Miller <philm[at]chakra-project[dog]org>
# maintainer (x86_64): Manuel Tortosa <manutortosa[at]chakra-project[dot]org>

pkgname=rcconf-settings
pkgver=0.4
pkgrel=1
pkgdesc='A KCM for manage the Rc.conf file for Chakra GNU/Linux'
arch=('i686' 'x86_64')
license=('GPL')
url='http://gitorious.org/chakra/rcconf-settings'
groups=('base')
options=('sign')
depends=('qt' 'kdebase-workspace')
source=("http://chakra-project.org/sources/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('d5b3c1708ae79b4d12b7c243010a397a')

build() {
	cd "${srcdir}/$pkgname"

	cmake . -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'
	make
}

package() {
	cd "${srcdir}/$pkgname"
	make DESTDIR=$startdir/pkg install
}
