# Maintainer: Francesco Marinucci <franzmari[at]chakra-project[dot]it>
# previous CCR-Maintainer: Simone Gaiarin <simgunz@gmail.com>

pkgname=rbtools
verprefix=0.6
pkgver=${verprefix}.1
pkgrel=1
pkgdesc="Client tools for Review Board"
arch=('x86_64')
url="http://www.reviewboard.org/"
license=('custom:MIT')
depends=('python2')
makedepends=('python2-setuptools')
source=("http://downloads.reviewboard.org/releases/RBTools/${verprefix}/RBTools-${pkgver}.tar.gz")
sha1sums=('c596ae974f4057115a647f4b36441d721c8778de')

build() {
  cd "$srcdir/RBTools-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/RBTools-$pkgver"
  python2 setup.py install --root "${pkgdir}"
  install -d -m755 "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
