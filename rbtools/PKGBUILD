pkgname=rbtools
pkgver=0.7.5
pkgrel=1
pkgdesc="Client tools for Review Board"
arch=('x86_64')
url="http://www.reviewboard.org/"
license=('custom:MIT')
depends=('python2')
makedepends=('python2-setuptools')
source=("$pkgname-$pkgver::https://github.com/reviewboard/rbtools/archive/release-${pkgver}.tar.gz")
sha512sums=('ad7aebff0f5496e2d06bd6e7e553d3d5b0527116acf1f15dde3ee7925f45f6a9de36ec57ccf6066a06c1472e1d6d70ac1a861eb7c99056b7e89f3701af3b94c1')

build() {
  cd "$srcdir/$pkgname-release-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname-release-$pkgver"
  python2 setup.py install --root "${pkgdir}"
  install -d -m755 "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
