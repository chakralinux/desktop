pkgname=unvanquished-data
_pkgname=unvanquished
pkgver=0.21.0
pkgrel=1
pkgdesc="A team-based fps/rts hybrid game which pits aliens against humans (data files)"
arch=('any')
url="http://www.unvanquished.net"
license=('CCPL-by-sa')
makedepends=('bc')
options=('emptydirs')

package() {
    install -d $pkgdir/usr/share/$_pkgname/main
    let limit=${pkgver:2:2}-1
    for i in $(seq 0 $limit)
    do
	if [ $i -lt 10 ]; then
            code=$i
        else
            let ASCII=$i+067
            ASCII=$(echo "obase=8;$ASCII" | bc)
            code=$(printf "\\$ASCII")
        fi
        file=pak$code.pk3
        wget -nc http://downloads.sourceforge.net/project/unvanquished/Assets/${file} \
        -P $pkgdir/usr/share/$_pkgname/main/
    done;
}
