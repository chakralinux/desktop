# maintainer abveritas[at]chakra-project[dot]org>

pkgname=bibletime-kde4
_pkgname=bibletime
pkgver=2.9.1
pkgrel=3
pkgdesc="Bible software that uses the Sword Engine for KDE4"
arch=('x86_64')
url=("http://www.blog.bibletime.info")
license=('GPL2')
depends=('qtwebkit' 'sword' 'openssl')
makedepends=('cmake' 'boost')
categories=('education')
source=('http://gitorious.org/bibletime/bibletime/archive-tarball/master')
md5sums=('9c431081610aa1947c0b0a31ec78a364')

build() {
  cd "$srcdir/$_pkgname-$_pkgname"
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
	-DCMAKE_BUILD_TYPE=Release ${srcdir}/$_pkgname-$_pkgname 

	make
}

package() {
        cd "$srcdir/$_pkgname-$_pkgname"
        make DESTDIR="${pkgdir}" install 

}

