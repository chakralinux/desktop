  cd ../..

  install -d build/et
  cd build/et
  cmake ${srcdir}/calligra-l10n-et-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
