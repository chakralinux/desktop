  cd ../..

  install -d build/fr
  cd build/fr
  cmake ${srcdir}/calligra-l10n-fr-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
