build() {
  cd $srcdir
  langs="ca cs da de el en_GB es et fr hu it kk nb nds nl pl pt pt_BR ru sk sv uk zh_CN zh_TW" 
  for lang in $langs; do
    install -d build/${lang}
    pushd build/${lang}
      cmake ${srcdir}/calligra-l10n-${lang}-${pkgver} \
	-DCMAKE_BUILD_TYPE=Release \
	-DCMAKE_INSTALL_PREFIX=/usr
      make 
    popd
  done
}

package_calligra-l10n-ca() {
        pkgdesc=('Catalan Localization for calligra')
        categories=('localization')
        cd $srcdir/build/ca
        make DESTDIR=$pkgdir install
}

