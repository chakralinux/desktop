# maintainer abveritas@chakra-project.org
# contributor: Homey

pkgname=kdeplasma-applets-stackfolder
pkgver=0.1.9
pkgrel=4
pkgdesc="Browse the stack of folders"
url="http://www.rosalab.ru"
arch=('x86_64' 'i686')
license=('GPL')
depends=('kde-workspace' 'libjpeg')
makedepends=('cmake' 'automoc4')
categories=('accessories')
source=("https://abf.rosalinux.ru/projects/50034/raw/master/plasma-applet-stackfolder-${pkgver}.tar.bz2")
md5sums=('46e4fe8614c3f8077d2c65d388de7dc2')
 
build() {
  cd "${srcdir}"
 
  mkdir -p "plasma-applet-stackfolder-${pkgver}-build"
  cd "plasma-applet-stackfolder-${pkgver}-build"
  cmake -DCMAKE_RELEASE_TYPE=RelWithDebInfo \
        -DCMAKE_INSTALL_PREFIX=$(kde4-config --prefix) \
        "${srcdir}/plasma-applet-stackfolder-${pkgver}"
  make
}
 
package() {
  cd "${srcdir}/plasma-applet-stackfolder-${pkgver}-build"
 
  make DESTDIR="${pkgdir}" install
}


