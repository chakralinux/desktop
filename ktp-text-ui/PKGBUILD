# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=ktp-kde-text-ui
pkgver=0.3.0
pkgrel=1
pkgdesc="Telepathy text chat handler"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kde-runtime' 'telepathyQt')
makedepends=('cmake' 'automoc4')
conflicts=('telepathy-call-ui')
replaces=('telepathy-call-ui')
groups=('telepathy-kde')
source=("ftp://mirrors.mit.edu/kde/unstable/telepathy-kde/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
sha1sums=('fb7c5dc02bb9d150d0e372c3584f50670d620f4a')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "${srcdir}"/build
  make DESTDIR="${pkgdir}" install
}