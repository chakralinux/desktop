# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

_pkgname=PyOpenGL
pkgname=python26-opengl
pkgver=3.0.1
pkgrel=1
pkgdesc="The cross platform Python binding to OpenGL and related APIs"
arch=('any')
license=('BSD')
depends=('python26' 'tk' 'freeglut' 'python26-setuptools')
url="http://pyopengl.sourceforge.net"
source=("http://downloads.sourceforge.net/pyopengl/${_pkgname}-${pkgver}.tar.gz"
	'LICENSE')
md5sums=('221d4a6a0928fcfeef26751370ec5f52'
         '0b53c508a63e5dbaf44cdfb0fa103b3a')

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python2.6 setup.py install --root="${pkgdir}" || return 1
  install -Dm644 "${srcdir}/LICENSE" \
    "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

