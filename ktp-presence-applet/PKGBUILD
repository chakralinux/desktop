pkgname=ktp-presence-applet
pkgver=0.3.0
pkgrel=1
pkgdesc="Plasma applet for managing your Telepathy account presence"
arch=('any')
url="http://www.kde.org"
license=('GPL')
depends=('ktp-presence-dataengine')
makedepends=('cmake' 'automoc4')
conflicts=('telepathy-presence-applet')
replaces=('telepathy-presence-applet')
groups=('telepathy-kde')
source=("ftp://mirrors.mit.edu/kde/unstable/telepathy-kde/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
sha1sums=('ba2792434cd5bc7d71c1b8ab2176775fc8e5524f')

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  cmake . \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make DESTDIR="${pkgdir}" install
}