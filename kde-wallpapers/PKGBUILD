
# Chakra Packages for Chakra, part of chakra-project.org


# Include global configuration
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname="kde-wallpapers"
pkgver=${_kdever}
pkgrel=3

_default_wp="Elarun"

pkgdesc="KDE Wallpapers"
url="http://www.kde.org"
license="GPL"
arch=('any')
options=('!header' 'debug' 'log')
groups=("kde" "kde-uninstall")
source=("$_mirror/${pkgname}-$_kdever.tar.xz")
sha256sums=(`grep ${pkgname}-$_kdever.tar.xz  ../checksums.txt | cut -d" " -f1`)
depends=('kdelibs')
replaces=('kde-workspace-wallpapers')
makedepends=('automoc4')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
		-DCMAKE_INSTALL_PREFIX=${_installprefix} \
		-DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'

	make

}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install

	rm -rfv ${pkgdir}/usr/share/wallpapers/${_default_wp}
}
sha256sums=('ad159e923ffb1ab022a73a25ce6df0ff819cb85e6e7a1afec56e8254e242cc22')
