pkgname=freeciv
pkgver=2.5.2
pkgrel=1
pkgdesc="Multiplayer clone of Civilizationâ„¢."
arch=('x86_64')
url="http://www.freeciv.org/"
license=('GPL2')
depends=('bzip2' 'freetype2' 'readline' 'qt5-base' 'sqlite3' 'curl' 'libltdl')
changelog=ChangeLog
categories=('games')
backup=('etc/freeciv/database.lua')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
sha256sums=('2b5665da849c8f95b9225857fc02935140de2d44cd1a112f9cf3086a84d0b5be')

build() {
  cd $srcdir/$pkgname-$pkgver
  export MOCCMD="/usr/lib/qt5/bin/moc"
  ./configure \
    --prefix=/usr \
    --mandir=/usr/share/man \
    --sysconfdir=/etc \
    --enable-client=qt \
    --enable-fcdb=sqlite3 \
    --enable-aimodules \
    --enable-shared
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver

  install -dm 755 $pkgdir/etc
  make DESTDIR=$pkgdir install

  # Link to Qt client.
  cd $pkgdir/usr/bin
  ln -s freeciv-qt freeciv
}
