pkgname=flightgear-data
_pkgname=flightgear
_pkgname2=FlightGear
pkgver=2.10.0
pkgrel=1
pkgdesc="FlightGear base data."
arch=(any)
license=(GPL3)
url=http://www.flightgear.org
source=(http://ftp.icm.edu.pl/packages/$_pkgname/Shared/$_pkgname2-data-$pkgver.tar.bz2)
sha256sums=('2fa0280ea9a1a0bee3eab27f034ec45d4cf44a2b818a7036b481da6668f7229f')

package() {
  mkdir -p $pkgdir/usr/share/$_pkgname
  mv $srcdir/data $pkgdir/usr/share/$_pkgname
  chown root:users $pkgdir/usr/share/$_pkgname/data
}
