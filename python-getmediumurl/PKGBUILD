# include global config
# source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=python-getmediumurl
_pkgname=GetMediumURL
pkgver=0.0a3
pkgrel=1
pkgdesc="Python module to get URLs of downloadable media and their metadata."
arch=('i686' 'x86_64')
url="http://pypi.python.org/pypi/GetMediumURL"
license=('GPL3')
depends=('python-lxml' 'python-simplejson' 'python-urlreader')
makedepends=('setuptools')
source=(http://pypi.python.org/packages/source/G/$_pkgname/$_pkgname-$pkgver.tar.gz)
md5sums=('a897561b3b4aa35bf8b291e86b1b2a1f')

build() {
  cd $srcdir/$_pkgname-$pkgver
}

package() {
  cd $srcdir/$_pkgname-$pkgver

  export PYTHON="/usr/bin/python2"
  python2 setup.py install --root=$pkgdir/ --optimize=1
}
