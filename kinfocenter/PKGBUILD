# Contributor: Andrea Scarpino <andrea@archlinux.org>

source ../plasma.conf

pkgname=kinfocenter
pkgver=${PVersion}
pkgrel=1
pkgdesc='kinfocenter'
arch=('x86_64')
url='projects.kde.org/'
license=('LGPL')
depends=('qt5-base' 'kxmlgui' 'solid' 'kwidgetsaddons' 'plasma-framework' 'kdelibs4support' 'kemoticons' 'kcmutils') # kwayland add when ready
makedepends=('extra-cmake-modules')
checkdepends=("cmake")
groups=('plasma')
options=("debug")
source=("${PServer}/${pkgver}/${pkgname}-${PSubVersion}.tar.xz")
sha256sums=( $(getSum ${pkgname}) )

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=${PBuildType} \
    -DCMAKE_INSTALL_PREFIX=${PInstallPrefix} \
    -DLIB_INSTALL_DIR=lib 
  make
}

check() {
  cd build
  make test
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
