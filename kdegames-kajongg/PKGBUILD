


# Maintainer: Manuel Tortosa <manutortosa@chakra-project@org>

# Include global configuration
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdegames-kajongg
_pkgname=kajongg
pkgver=${_kdever}
pkgrel=2
pkgdesc="The ancient Chinese board game for 4 players"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=("kdegames-libkdegames>=${_kdever}" "kdegames-libkmahjongg>=${_kdever}" "kdebindings-pykde4>=${_kdever}" "python2-twisted")
makedepends=('pkg-config' 'cmake' 'automoc4')
source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
sha1sums=(`grep ${_pkgname}-$_kdever.tar.xz  ../checksums.txt | cut -d " " -f1`)
groups=("kde" "kdegames" "kde-uninstall")
provides=('kajongg')
options=('docs' '!header' 'debug' 'log')

build() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
                -DCMAKE_INSTALL_PREFIX=${_installprefix} \
                -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'

}

package() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install || return 1

}
