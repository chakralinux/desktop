post_install() {
  echo "adding user 'transmission' "
  useradd -m transmission
  echo "creating /run/transmission"
  install -d -o transmission -m755  /run/transmission
  echo "done"
}

post_remove() {
  echo "deleting user 'transmission' ."
  userdel -r transmission
  echo "removing /run/transmission"
  rm /run/transmission
  echo "done"
}

