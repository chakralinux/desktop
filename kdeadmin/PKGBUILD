# KDE SC Packages for Chakra, part of chakra-project.org
#
# maintainer (i686): Phil Miller <philm[at]chakra-project[dog]org>
# maintainer (x86_64): Manuel Tortosa <manutortosa[at]chakra-project[dot]org>

# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

#
# package info
#
pkgbase=('kdeadmin')
pkgname=('kdeadmin-strigi-analyzer'
         'kdeadmin-doc'
         'kdeadmin-kcron'
         'kdeadmin-kuser'
         'kdeadmin-ksystemlog'
         'kdeadmin-system-config-printer')

arch=('i686' 'x86_64')
pkgver=${_kdever}
pkgrel=1
pkgdesc="split package"
url="http://www.kde.org/"
license=('GPL' 'LGPL' 'FDL')
install=kdeadmin.install
options=('!splithdr' 'splitdbg' 'log')

makedepends=('pkgconfig' 'cmake' 'automoc4' "kdepimlibs>=${_kdever}"  "kde-runtime>=${_kdever}"
	     "kdebindings-pykde4>=${_kdever}" 'system-config-printer-common') # "kdepim-runtime>=${_kdever}"

source=($_mirror/${pkgbase}-$_kdever.tar.bz2)
md5sums=(`grep ${pkgbase}-$_kdever.tar.bz2 ../kde-sc.md5 | cut -d" " -f1`)

#
# build function
#
build()
{
	cd ${srcdir}/${pkgbase}-${pkgver}
	
	msg "starting build ..."
	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
		-DCMAKE_INSTALL_PREFIX=${_installprefix} \
		-DBUILD_kpackage=OFF \
                -DBUILD_knetworkconf=OFF \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'

	make || return 1
}

#
# split-install functions
#
package_kdeadmin-strigi-analyzer()
{
	pkgdesc="KDE Administrative Tools - Common files and libraries"
	depends=("kde-runtime>=${_kdever}")
        provides=('kdeadmin-common')
	replaces=('kdeadmin-common')
	groups=("${pkgbase}" "kde" "kde-uninstall")

	splitdirs="strigi-analyzer"
		for i in ${splitdirs} ; do
			cd ${srcdir}/${pkgbase}-${pkgver}/${i}
			make DESTDIR=${pkgdir} install || return 1
		done

}

package_kdeadmin-doc()
{
	pkgdesc="KDE Administrative Tools - Documentation"
	depends=()
	groups=("${pkgbase}" "kde" "kde-uninstall" "doc")

	splitdirs="doc"
		for i in ${splitdirs} ; do
			cd ${srcdir}/${pkgbase}-${pkgver}/${i}
			make DESTDIR=${pkgdir} install || return 1
		done
}

