# maintainer (x86_64): Manuel Tortosa <manutortosa[at]chakra-project[dot]org>

# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf



# original name (used for the source and pkgnames)
_origname=meanwhile



pkgname=${_origname}
pkgver=1.0.2
pkgrel=13
arch=('i686' 'x86_64')
pkgdesc="Meanwhile Libraries"
url="http://meanwhile.sourceforge.net/"
license="GPL"
depends=('glib2')
makedepends=('doxygen')
options=('!splitdbg' '!splithdr')
source=(http://downloads.sourceforge.net/project/meanwhile/meanwhile/$pkgver/meanwhile-$pkgver.tar.gz
        broken-status.patch)
md5sums=('bf4ced109a367b4c5d71fe63c043270e' #  meanwhile-1.0.2.tar.gz
         '9c5c5ea73a43597ce09d0c81b16e6316')
groups=("kde-uninstall" "kde-support")

build() {
  cd $srcdir/$pkgname-$pkgver/src
  patch -Np0 -i "${srcdir}/broken-status.patch"

  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --disable-mailme
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
} 
