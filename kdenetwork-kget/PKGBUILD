# Include global configuration
source ../kdeapps.conf

pkgname="kdenetwork-kget"
arch=('x86_64')
pkgver=${_kdever}
pkgrel=1
pkgdesc="Download manager"
url="http://kde.org/applications/internet/kget/"
depends=('kdebase-runtime' 'libmms' 'qca')
makedepends=('cmake' 'automoc4' 'boost')
#optdepends=('libktorrent4: torrent support')
groups=("kde" "kdenetwork" "kde-uninstall")
conflicts=("kdenetwork-common" "kdenetwork-doc")
install=kdenetwork.install
license=('GPL' 'LGPL' 'FDL')
options=('docs' 'debug')
source=("$_mirror/kget-$_kdever.tar.xz"{,.sig})
sha256sums=(`grep kget-$_kdever.tar.xz  ../kdeapps.sums | cut -d " " -f1`
                        'SKIP')
validpgpkeys=(${Avalidpgpkeys[@]})
            

prepare(){
  cd ${srcdir}/kget-$pkgver
}

build() {
    cd ${srcdir}/kget-$pkgver
    cmake . \
        -DCMAKE_BUILD_TYPE=${_build_type} \
        -DCMAKE_INSTALL_PREFIX=${_installprefix} \
        -DCMAKE_SKIP_RPATH=ON \
        -DWITH_NepomukCore=Off \
        -DWITH_NepomukWidgets=Off \
        -DWITH_KDE4Workspace=Off \
        -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'
    make
}

package() {
    cd ${srcdir}/kget-$pkgver
    make DESTDIR=${pkgdir} install
}
