# Contributor: Benjamin Mtz (cruznick) <cruznick at archlinux dot us>

_pkgname=bespin
pkgname=bespin-svn
pkgver=1716
pkgrel=1
pkgdesc="Qt4/KDE4 style"
arch=(i686 x86_64)
url="http://kde-look.org/content/show.php/Bespin?content=63928"
license=('LGPL')
depends=('qt' 'kdelibs')
optdepends=('kde-workspace')
makedepends=('cmake>=2.4' 'automoc4' 'subversion' 'kde-workspace')
provides=('bespin')
categories=('graphics')
changelog=$pkgbase.changelog
source=("$_pkgname::svn://svn.code.sf.net/p/cloudcity/code/#revision=${pkgver}")
md5sums=('SKIP')

build() {
  cd $_pkgname
  cmake . \
    -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` \
    -DENABLE_ARGB=ON \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd $_pkgname

  make DESTDIR=${pkgdir} install

  install -Dm644 man/bespin.1 ${pkgdir}/usr/share/man/man1/bespin.1
  install -Dm644 extras/bespin-compl ${pkgdir}/etc/bash_completion.d/bespin
}
