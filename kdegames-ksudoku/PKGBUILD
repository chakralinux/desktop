# Include global configuration
source ../kdeapps.conf

pkgname=kdegames-ksudoku
_pkgname=ksudoku
pkgver=${_kdever}
pkgrel=1
pkgdesc="Sudoku game for KDE"
arch=('x86_64')
url='http://kde.org/applications/games/ksudoku/'
screenshot='https://www.kde.org/images/screenshots/ksudoku.png'
license=('GPL' 'LGPL' 'FDL')
depends=("kdegames-libkdegames" 'glu')
makedepends=('pkg-config' 'cmake' 'automoc4' 'docbook-xsl')
groups=("kde" "kdegames" "kde-uninstall")
options=('docs' 'debug')
source=("$_mirror/${_pkgname}-$_kdever.tar.xz"{,.sig})
sha256sums=(`grep ${_pkgname}-$_kdever.tar.xz  ../kdeapps.sums | cut -d " " -f1`
                        'SKIP')
validpgpkeys=(${Avalidpgpkeys})

build() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    cmake . \
        -DCMAKE_BUILD_TYPE=${_build_type} \
        -DCMAKE_INSTALL_PREFIX=${_installprefix} \
        -DCMAKE_SKIP_RPATH=ON \
        -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'
    make
}

package() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install
}
