#
# maintainer : abveritas[at]chakra-project[dog]org>

pkgname=muparser
pkgver=2.23
_pkgver=2_2_3
pkgrel=1
pkgdesc="An extensible high performance math expression parser library written in C++"
arch=('x86_64')
url="http://muparser.sourceforge.net/"
depends=('gcc-libs')
makedepends=('unzip')
license=('custom')
options=('!makeflags')
source=("http://sourceforge.net/projects/${pkgname}/files/${pkgname}/Version%202.2.3/${pkgname}_v${_pkgver}.zip")
md5sums=('9de40ec1dab5bd2787ee344fce5846ad')

build() {
  cd $srcdir/${pkgname}_v${_pkgver}

  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/${pkgname}_v${_pkgver}

  make DESTDIR=$pkgdir install
  # license
  install -D -m644 License.txt $pkgdir/usr/share/licenses/${pkgname}/LICENSE
}