# maintainer (i686): Phil Miller <philm[at]chakra-project[dog]org>
# maintainer (x86_64): Manuel Tortosa <manutortosa[at]chakra-project[dot]org>

# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

#
# package info
#
pkgname=kdebindings-qtruby
_pkgname=qtruby
pkgver=${_kdever}
pkgrel=1
pkgdesc="Qt bindings for ruby"
url="http://kde.org/"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=("kdebindings-smokeqt>=${_kdever}" "ruby")
makedepends=('cmake' 'automoc4' "kdebindings-smokegen>=${_kdever}")
source=("$_mirror/${_pkgname}-$_kdever.tar.bz2")
md5sums=(`grep ${_pkgname}-$_kdever.tar.bz2 ../kde-sc.md5 | cut -d" " -f1`)
conflicts=('kdebindings-common')
groups=("kde" "kdebindings" "kde-uninstall")
provides=('qtruby')
options=('docs' '!splithdr' 'splitdbg' 'log')

build() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
                -DCMAKE_INSTALL_PREFIX=${_installprefix} 
        make
}

package() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install || return 1

}
