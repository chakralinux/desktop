#
# Chakra Packages for Chakra, part of chakra-project.org
#
# maintainer abveritas@chakra-project.org

pkgname=rkward
pkgver=0.6.0
pkgrel=1
pkgdesc="Easy to use transparent frontend to R for KDE4"
arch=('i686' 'x86_64')
url="http://rkward.sourceforge.net/"
license=('GPL')
depends=('kde-runtime' 'qt' 'r' 'docbook-xsl')
makedepends=('cmake' 'automoc4' 'icu')
categories=('education')
screenshot=('http://sourceforge.net/apps/mediawiki/rkward/nfs/project/r/rk/rkward/thumb/4/44/ScriptEditor1.png/800px-ScriptEditor1.png')
source=("http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('9ad0b6a3e70496ec164d9e74cfcb721a')
 
build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	# Dir for rkward R package
	mkdir -p "${pkgdir}/usr/lib/R/library"
	cmake -DCMAKE_INSTALL_PREFIX="/usr" -DR_LIBDIR="/usr/lib/R/library"
	make 
}

package(){
	cd "${srcdir}/${pkgname}-${pkgver}"
	make install DESTDIR="${pkgdir}"

	# Some cleanup
	rm -vf "${pkgdir}/usr/lib/R/library/R.css"
	rm -vf "${pkgdir}/usr/share/apps/katepart/syntax/r.xml"
}
