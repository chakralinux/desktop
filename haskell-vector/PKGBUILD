_hkgname=vector
pkgname=haskell-vector
pkgver=0.10.0.1
pkgrel=3
pkgdesc="Efficient Arrays"
url="http://hackage.haskell.org/package/vector"
license=('custom:BSD3')
arch=('x86_64' 'i686')
makedepends=()
depends=('ghc=7.6.3-1' 'haskell-base>=4.0' 'haskell-deepseq>=1.1' 'haskell-deepseq<1.4' 'haskell-ghc-prim' 'haskell-primitive>=0.5.0.1' 'haskell-primitive<0.6')
options=('strip')
source=("http://hackage.haskell.org/packages/archive/vector/0.10.0.1/vector-0.10.0.1.tar.gz")
install="haskell-vector.install"
sha512sums=('2595bee97295a62471de26748c0b598f40a9c5a75571e645c24a8f2bc4eef1d7a3e29d576e7ba9a9dca0fb071f0c178a5a3757e063219d1cf25d8c484e645754')

build() {
    cd "${srcdir}/vector-0.10.0.1"
    runhaskell Setup configure \
        -O \
        ${PKGBUILD_HASKELL_ENABLE_PROFILING:+-p } \
        --enable-split-objs \
        --enable-shared \
        --prefix="/usr" \
        --docdir="/usr/share/doc/haskell-vector" \
        --libsubdir='$compiler/site-local/$pkgid'
    runhaskell Setup build
    runhaskell Setup haddock
    runhaskell Setup register   --gen-script
    runhaskell Setup unregister --gen-script
    sed -i -r -e "s|ghc-pkg.*unregister[^ ]* |&'--force' |" unregister.sh
}

package() {
    cd "${srcdir}/vector-0.10.0.1"
    install -D -m744 register.sh \
        "${pkgdir}/usr/share/haskell/haskell-vector/register.sh"
    install -m744 unregister.sh \
        "${pkgdir}/usr/share/haskell/haskell-vector/unregister.sh"
    install -d -m755 "${pkgdir}/usr/share/doc/ghc/html/libraries"

    # Documentation
    ln -s "/usr/share/doc/haskell-vector/html" \
        "${pkgdir}/usr/share/doc/ghc/html/libraries/vector"

    # License
    install -D -m644 LICENSE \
        "${pkgdir}/usr/share/licenses/haskell-vector/LICENSE"
    rm -f "${pkgdir}/usr/share/doc/haskell-vector/LICENSE"

    runhaskell Setup copy --destdir="${pkgdir}"
}
