# maintainer almack@chakraos.org

pkgname=kcm-pacman-repoeditor
_pkgname=kcmpacmanrepoeditor
pkgver=0.1.0
pkgdesc="A KDE control module for pacman's repositories management."
pkgrel=2
arch=('x86_64')
url="https://github.com/gcala/kcmpacmanrepoeditor"
license=('GPL3')
makedepends=('cmake')
depends=('kdelibs')
categories=('system')
#source=("$pkgname"::"git://github.com/gcala/${pkgname}.git#commit=${gitsha}")
source=("https://github.com/gcala/kcmpacmanrepoeditor/archive/master.zip")
md5sums=('a9204214ba548d2caeb7975b236a660a')

build(){
  cd "${srcdir}/${_pkgname}-master"

  mkdir -p build
  cd build

  cmake .. \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package(){
  cd "${srcdir}/${_pkgname}-master/build"
  make DESTDIR="${pkgdir}" install
}