# Contributor: Matteo Agostinelli <matteo@agostinelli.me>

pkgname=dpic
pkgver=2014.01.01
_pkgver=2014.Jan.01
pkgrel=1
pkgdesc="A pic language interpreter"
arch=('x86_64')
url="http://www.ece.uwaterloo.ca/~aplevich/dpic/"
license=('BSD')
makedepends=('gcc')
options=('!docs')
source=("http://www.ece.uwaterloo.ca/~aplevich/${pkgname}/${pkgname}-${_pkgver}.tar.gz")
md5sums=('9ecdceaff3737b0b1555ac7f987f0eae')

build() {
  cd $srcdir/$pkgname
  make
}

package() {
  # Documentation
  install -dm 755 ${pkgdir}/usr/share/man/man1
  install -Dm644 ${srcdir}/${pkgname}/doc/dpic.1 $pkgdir/usr/share/man/man1

  cd $srcdir/$pkgname
  make DESTDIR=$pkgdir/usr install
}

