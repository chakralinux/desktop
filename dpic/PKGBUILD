pkgname=dpic
pkgver=2013.09.30
pkgrel=1
pkgdesc="A pic language interpreter"
arch=('x86_64')
url="http://www.ece.uwaterloo.ca/~aplevich/dpic/"
license=('BSD')
makedepends=('gcc')
source=("http://www.ece.uwaterloo.ca/~aplevich/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('d870622cdc574d99397fdababf94677f')
options=('!docs')

build() {
  cd $srcdir/$pkgname
  make
}

package() {
  # Documentation
  install -dm 755 ${pkgdir}/usr/share/man/man1
  install -Dm644 ${srcdir}/${pkgname}/doc/dpic.1 $pkgdir/usr/share/man/man1

  cd $srcdir/$pkgname
  make DESTDIR=$pkgdir/usr install
}

