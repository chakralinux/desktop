pkgname=dpic
pkgver=2015.08.13
pkgrel=1
pkgdesc="A pic language interpreter"
arch=('x86_64')
url="http://www.ece.uwaterloo.ca/~aplevich/dpic/"
license=('BSD')
makedepends=('gcc')
options=('!docs')
source=("https://ece.uwaterloo.ca/~aplevich/dpic/dpic.tar.gz")
sha512sums=('9796a0706798e26f7e936e62482418e1b7fbc1579d66b0cf097ad26d2e8bb6d3ccbd1aec3cce3152d64127dbb97453864946c9a027e8e5855e9988f1534f815d')

build() {
  cd $srcdir/$pkgname
  make
}

package() {
  # Documentation
  install -dm 755 ${pkgdir}/usr/share/man/man1
  install -Dm644 ${srcdir}/${pkgname}/doc/dpic.1 $pkgdir/usr/share/man/man1

  cd $srcdir/$pkgname
  make DESTDIR=$pkgdir/usr install
}

