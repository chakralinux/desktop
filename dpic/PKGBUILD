pkgname=dpic
pkgver=20121104
pkgrel=1
pkgdesc="A pic language interpreter"
arch=('x86_64')
url="http://www.ece.uwaterloo.ca/~aplevich/dpic/"
license=('BSD')
makedepends=('gcc')
source=('http://www.ece.uwaterloo.ca/~aplevich/dpic/dpic-2012.11.04.tar.gz')
md5sums=('574eb4318ba132be98f64a97c122ec78')

build() {
  cd $srcdir/$pkgname
  make
}

package() {
  # Documentation.
  mkdir -p $pkgdir/usr/share/man/man1
  mv dpic/doc/dpic.1 $pkgdir/usr/share/man/man1

  cd $srcdir/$pkgname
  make DESTDIR=$pkgdir/usr install
}
