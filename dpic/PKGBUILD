pkgname=dpic
pkgver=2015.06.29
pkgrel=1
pkgdesc="A pic language interpreter"
arch=('x86_64')
url="http://www.ece.uwaterloo.ca/~aplevich/dpic/"
license=('BSD')
makedepends=('gcc')
options=('!docs')
source=("https://ece.uwaterloo.ca/~aplevich/dpic/dpic.tar.gz")
sha512sums=('7e7ba112efa282406e57e3cacd52ed6fdef21d330b4a0cb87ecf9b24e927406b1e218063afe2b4b4db02816a985ef21c7d696e6ca91d2df822ccfe83624503c7')

build() {
  cd $srcdir/$pkgname
  make
}

package() {
  # Documentation
  install -dm 755 ${pkgdir}/usr/share/man/man1
  install -Dm644 ${srcdir}/${pkgname}/doc/dpic.1 $pkgdir/usr/share/man/man1

  cd $srcdir/$pkgname
  make DESTDIR=$pkgdir/usr install
}

