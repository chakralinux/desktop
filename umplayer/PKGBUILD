pkgname=umplayer
_pkgname=UMPlayer
pkgver=0.98.1
pkgrel=1
pkgdesc="The multimedia player that fills all your needs"
arch=(i686 x86_64)
url=http://www.umplayer.com/
license=(GPL)
depends=(qt mplayer)
categories=('multimedia')
install=umplayer.install
source=(http://downloads.sourceforge.net/project/smplayer/${_pkgname}/${pkgver}/${pkgname}_${pkgver}.orig.tar.gz)
md5sums=('ce7bea6965e1c53e0cf37c7d85ad9c08')

build() {
  cd $srcdir/${pkgname}-${pkgver}
  make PREFIX=/usr
}

package() {
  cd $srcdir/${pkgname}-${pkgver}
  make PREFIX=/usr DESTDIR="${pkgdir}" install
}
