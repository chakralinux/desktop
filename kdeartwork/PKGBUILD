# Contributors: Manuel Tortosa <manutortosa@chakra-project.org>

# Include global configuration
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgbase=('kdeartwork')
pkgname=('kdeartwork-colorschemes'
         'kdeartwork-desktopthemes'
         'kdeartwork-emoticons'
         'kdeartwork-iconthemes'
         'kdeartwork-screensavers'
         'kdeartwork-styles'
         'kdeartwork-wallpapers'
         'kdeartwork-weatherwallpapers')
arch=('x86_64')
pkgver=${_kdever}
pkgrel=1
url="http://www.kde.org/"
license=('GPL' 'LGPL' 'FDL')
install=${pkgbase}.install
makedepends=('pkg-config'
             'cmake'
             'automoc4'
             'xscreensaver'
             'eigen'
             "kde-workspace>=${_workspace_ver}")
source=($_mirror/${pkgbase}-$_kdever.tar.xz
    http://www.kde-look.org/CONTENT/content-files/92545-xscreensaver.tar.bz2)
sha256sums=(`grep ${pkgbase}-$_kdever.tar.xz  ../checksums.txt | cut -d" " -f1`
            'f6f500b66b97b62d08f885662da7c3deca5b00d01431f3692693b9b29bdd4779')

build() {
    cd ${srcdir}/${pkgbase}-${pkgver}
    cmake . \
        -DCMAKE_BUILD_TYPE=${_build_type} \
        -DCMAKE_INSTALL_PREFIX=${_installprefix} \
        -DCMAKE_SKIP_RPATH=ON \
        -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'
    make
}

package_kdeartwork-aurorae() {
    pkgdesc='An Aurorae theme based on the Oxygen plasma theme'
    depends=("kde-workspace>=${_workspace_ver}")
    groups=("${pkgbase}" "kde" "kde-uninstall")
    conflicts=("kdeartwork-common")

    splitdirs="aurorae"
    for i in ${splitdirs} ; do
        cd ${srcdir}/${pkgbase}-${pkgver}/${i}
        make DESTDIR=${pkgdir} install
    done
}

package_kdeartwork-colorschemes() {
    pkgdesc="KDE Artwork - Color Schemes"
    depends=("kde-workspace>=${_workspace_ver}")
    groups=("${pkgbase}" "kde" "kde-uninstall")
    conflicts=("kdeartwork-common")

