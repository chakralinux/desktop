# maintainer (i686): Phil Miller <philm[at]chakra-project[dog]org>
# maintainer (x86_64): Manuel Tortosa <manutortosa[at]chakra-project[dot]org>

# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

#
# package info
#
pkgname=('kde-baseapps-kwrite')
_pkgname=kate
pkgver=${_kdever}
pkgrel=1
url="http://kde.org/"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
pkgdesc="Text Editor"
depends=("kde-runtime>=${_kdever}" 'kdesdk-kate')
makedepends=("kdelibs>=${_kdever}" 'cmake' 'automoc4' 'docbook-xsl')
groups=('kde' 'kde-baseapps' 'kde-uninstall')
provides=('kdebase-kwrite' 'kwrite')
replaces=('kdebase-kwrite')
install='kde-baseapps-kwrite.install'
source=("$_mirror/${_pkgname}-$_kdever.tar.bz2"
        'pkgbuild-syntax-highlight.patch')
md5sums=(`grep ${_pkgname}-$_kdever.tar.bz2 ../kde-sc.md5 | cut -d" " -f1`
         'dc4315d8f0c0f97ea63cfa645a1013be')
options=('!splithdr' 'splitdbg' 'log')

build()
{
	cd ${srcdir}/${_pkgname}-${pkgver}

	patch -p1 -i "${srcdir}"/pkgbuild-syntax-highlight.patch

	# FIXME: Snippet tags plugin does not compile
	sed -i -e "s~add_subdirectory( snippets_tng )~~g" ${srcdir}/${_pkgname}-${pkgver}/kate/plugins/CMakeLists.txt

	msg "starting build ..."
	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
		-DCMAKE_INSTALL_PREFIX=${_installprefix} \
		-DBUILD_KTEXTEDITOR=OFF \
		-DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed' 
	make
}

package()
{
	cd ${srcdir}/${_pkgname}-${pkgver}/kwrite
	make DESTDIR="${pkgdir}" install

	cd ${srcdir}/${_pkgname}-${pkgver}/doc/kwrite
	make DESTDIR="${pkgdir}" install
}
