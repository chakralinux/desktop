# maintainer (x86_64): Manuel Tortosa <manutortosa[at]chakra-project[dot]org>

pkgname=ktp-common-internals
pkgver=0.3.0
pkgrel=1
pkgdesc="Plasma dataengine for managing Telepathy account presence"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kde-baseapps' 'telepathyQt')
makedepends=('cmake' 'automoc4')
conflicts=('telepathy-presence-dataengine')
replaces=('telepathy-presence-dataengine')
groups=('telepathy-kde')
source=("ftp://mirrors.mit.edu/kde/unstable/telepathy-kde/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
sha1sums=('87f8c65baf35410e65ca9b7cb016210f2b13f72d')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "${srcdir}"/build
  make DESTDIR="${pkgdir}" install
}