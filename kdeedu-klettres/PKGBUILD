# Contributions from Arch: https://www.archlinux.org/packages/extra/x86_64/kdeedu-klettres/
# Include global configuration
source ../kdeapps.conf

pkgname=klettres
pkgver=${_kdever}
pkgrel=1
pkgdesc="Learn the alphabet"
url="http://kde.org/applications/education/klettres/"
arch=('x86_64')
screenshot='https://www.kde.org/images/screenshots/klettres.png'
license=('GPL' 'LGPL' 'FDL')
depends=('kdelibs4support' 'knewstuff')
makedepends=('extra-cmake-modules' 'kdoctools' 'python3')
groups=("kde" "kdeedu" "kde-uninstall")
categories=('education')
provides=('kdeedu-klettres')
replaces=('kdeedu-klettres')
conflicts=('kdeedu-klettres')
options=('docs' 'debug')
source=("$_mirror/${pkgname}-$_kdever.tar.xz")
sha256sums=(`grep ${pkgname}-$_kdever.tar.xz  ../checksums.txt | cut -d " " -f1`)

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake_kf5 ../${pkgname}-${pkgver}
  make
}

package() {
    cd build
    make DESTDIR=${pkgdir} install
}
