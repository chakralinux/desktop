build() {
        cd "${srcdir}/cinstall-gcala-cbundle"
        

        cmake  \
          -DCMAKE_INSTALL_PREFIX=/usr \
          -DCMAKE_BUILD_TYPE=Release
        make || return 1
        make DESTDIR=${pkgdir} install || return 1
}
