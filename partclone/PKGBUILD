pkgname=partclone
pkgver=0.2.85
pkgrel=1
pkgdesc="Backup and restore a partition for numerous file-systems types."
arch=('x86_64')
url="https://github.com/Thomas-Tsai/partclone"
license=('GPL2')
depends=('e2fsprogs' 'progsreiserfs' 'ncurses')
makedepends=('ncurses')
categories=('utils')
changelog=ChangeLog
source=("https://github.com/Thomas-Tsai/partclone/archive/${pkgver}.tar.gz")
sha512sums=('10ba588adcab47bee2cc5adc16a06b3c7fe27db561c92aac30d246ceebf00944ac89c3439aee49db19e304dbd1a4dc14c3ff1d42d26ebafe535cddb6e6b5dd8a')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure \
    --prefix=/usr \
    --enable-extfs \
    --enable-reiserfs \
    --enable-hfsp \
    --enable-fat \
    --enable-ncursesw
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
