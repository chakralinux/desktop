pkgname=partclone
pkgver=0.2.80
pkgrel=1
pkgdesc="Backup and restore a partition for numerous file-systems types."
arch=('x86_64')
url="https://github.com/Thomas-Tsai/partclone"
license=('GPL2')
depends=('e2fsprogs' 'progsreiserfs' 'ncurses')
makedepends=('ncurses')
categories=('utils')
changelog=ChangeLog
source=("https://github.com/Thomas-Tsai/partclone/archive/${pkgver}.tar.gz")
sha512sums=('69d4f4a631d945d6fc0358f8f1f12eb2a5285a63309bc844ca96eb8fd17133a4cdc14f53f5c8ef1d08fe507b1242cfdef5a3e36a7eaa8221bdc10c3dde548550')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure \
    --prefix=/usr \
    --enable-extfs \
    --enable-reiserfs \
    --enable-hfsp \
    --enable-fat \
    --enable-ncursesw
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
