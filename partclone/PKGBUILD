pkgname=partclone
pkgver=0.2.83
pkgrel=1
pkgdesc="Backup and restore a partition for numerous file-systems types."
arch=('x86_64')
url="https://github.com/Thomas-Tsai/partclone"
license=('GPL2')
depends=('e2fsprogs' 'progsreiserfs' 'ncurses')
makedepends=('ncurses')
categories=('utils')
changelog=ChangeLog
source=("https://github.com/Thomas-Tsai/partclone/archive/${pkgver}.tar.gz")
sha512sums=('62be2cd065a666e695da9c6e6e3ac2ab363ef51a642cac198e77be8169db3b1a90f18a01e951523600e2f3ad7efb6b6546c0f6a922964b34ac2342a481620725')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure \
    --prefix=/usr \
    --enable-extfs \
    --enable-reiserfs \
    --enable-hfsp \
    --enable-fat \
    --enable-ncursesw
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
