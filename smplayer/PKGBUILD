# Maintainer: UtG <utg.chakra.linux[at]gmail[dot]com>

pkgname=smplayer
_pkgname=SMPlayer
pkgver=14.3.0
pkgrel=1
pkgdesc="A complete front-end for MPlayer"
arch=('x86_64')
url="http://smplayer.sourceforge.net/"
license=('GPL')
depends=('qt>=4.8.4' 'mplayer' 'mpg123' 'hicolor-icon-theme')
optdepends=('smplayer-themes: icon themes collection'
            'smplayer-skins: skin themes collection'
            'smtube: browse and play youtube videos')
categories=('multimedia')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$_pkgname-$pkgver.tar.bz2)
md5sums=('c6ef86f7fe0022b35c0f06430f4cd9bd')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make PREFIX=/usr 
    DOC_PATH="\\\"/usr/share/doc/smplayer\\\"" \
    QMAKE_OPTS=DEFINES+=NO_DEBUG_ON_CONSOLE
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  
  make DOC_PATH=/usr/share/doc/smplayer \
    DESTDIR="$pkgdir" PREFIX="/usr" install
    
  # Icon
  install -dm755 ${pkgdir}/usr/share/pixmaps
  ln -s /usr/share/icons/hicolor/64x64/apps/smplayer.png \
        ${pkgdir}/usr/share/pixmaps/

  # Menu entries.
  sed -i 's|Exec=smplayer %U|Exec=smplayer %F|' ${pkgdir}/usr/share/applications/smplayer.desktop || return 1
  sed -i 's|Exec=smplayer -add-to-playlist %U|Exec=smplayer -add-to-playlist %F|' \
  	${pkgdir}/usr/share/applications/smplayer_enqueue.desktop 
}
