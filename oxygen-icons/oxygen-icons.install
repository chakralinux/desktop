post_install() {
		# fix default.kde icon link problem
		pushd /usr/share/icons &>/dev/null
			rm -rf default.kde4 &>/dev/null
			ln -s hicolor default.kde4 &>/dev/null
		popd &>/dev/null

		[[ -f /usr/bin/chakra-update-icons ]] && /usr/bin/chakra-update-icons &>/dev/null
}

post_upgrade() {
  post_install $1 
}

op=$1
shift

$op $* 
