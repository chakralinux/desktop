pkgname=pcsclite
_pkgname=pcsc-lite
pkgver=1.8.13
_code=4126
pkgrel=1
pkgdesc="PC/SC Architecture smartcard middleware library"
arch=('x86_64')
url="https://alioth.debian.org/projects/pcsclite/"
license=('BSD')
depends=('udev')
options=('!libtool' '!docs')
source=("https://alioth.debian.org/frs/download.php/file/${_code}/${_pkgname}-${pkgver}.tar.bz2")
sha512sums=('ce45b48fa0da568690e25f80c8b37c201f8a6eb411c7d12a55748af16eda1d8b39984261f562c5af50ff79d7476597e3363097cb5f0b6ca8fa009d9321d02023')

build() {

  cd "${srcdir}/${_pkgname}-${pkgver}"
  sed -i -e "s:python:python2:g" src/spy/pcsc-spy

  ./configure --enable-ipcdir=/run/pcscd \
              --enable-libudev \
              --enable-usbdropdir=/usr/lib/pcsc/drivers \
              --prefix=/usr \
              --sysconfdir=/etc \
              --with-systemdsystemunitdir=/usr/lib/systemd/system

  make
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" install

  install -D "${srcdir}/${_pkgname}-${pkgver}/COPYING" "${pkgdir}/usr/share/licenses/${pkgname}/license.txt"
  install -d "${pkgdir}/usr/lib/pcsc/drivers"
}
