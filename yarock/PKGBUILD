pkgname=yarock
_pkgname=Yarock
pkgver=0.0.52
pkgrel=1
pkgdesc="A Qt4 Modern Music Player with collection browser based on cover art."
arch=('i686' 'x86_64')
url="http://qt-apps.org/content/show.php?content=129372"
screenshot="http://qt-apps.org/CONTENT/content-pre2/129372-2.png"
license=('GPL3')
depends=('qt' 'taglib' 'phonon')
#source=(http://dl.dropbox.com/u/9382990/${_pkgname}_${pkgver}_source.tar.gz)
source=(http://node5.nirvanix.com/0z0bJ99R~h-08rvetj_~nwX7546n~oVwFzF86Xu~G8Jrj0A/FreeDrive/fd_330148/YaRock/Yarock_0.0.52_source.tar.gz?disposition=attachment)
md5sums=('476282c7935adbcd0ed06777940af0ee')

build() {
   cd $srcdir/${_pkgname}_${pkgver}_source
   qmake PREFIX=/usr
}

package() {
   cd $srcdir/${_pkgname}_${pkgver}_source
   make INSTALL_ROOT=$pkgdir install
}