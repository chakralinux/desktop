pkgname=virtualbox-ext-oracle
pkgver=4.2.2
_build=81494
pkgrel=1
pkgdesc="Oracle VM VirtualBox Extension Pack"
arch=('any')
url="http://www.virtualbox.org/"
license=('custom:PUEL')
depends=("virtualbox")
categories=('system')
options=(!strip)
install=${pkgname}.install
source=("http://download.virtualbox.org/virtualbox/${pkgver}/Oracle_VM_VirtualBox_Extension_Pack-${pkgver}-${_build}.vbox-extpack" 
        "PUEL" )
sha256sums=('2a0824a7f6b93842feb13fe15de16a1bb33c9221116d62ce759eed6878169c2b'
            '50658c653cde4dc43ba73a64c72761d2e996fd8e360fc682aa2844e1ad5b045f')

package() {
  cd "${srcdir}"

  install -D -m 644 "Oracle_VM_VirtualBox_Extension_Pack-${pkgver}-${_build}.vbox-extpack" \
    "${pkgdir}/usr/share/virtualbox/extensions/Oracle_VM_VirtualBox_Extension_Pack-$pkgver.vbox-extpack"
  install -D -m 644 "PUEL" "${pkgdir}/usr/share/licenses/${pkgname}/PUEL"
}
