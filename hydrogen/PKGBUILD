pkgname=hydrogen
pkgver=0.9.6_beta3
_pkgver=0.9.6-beta3
pkgrel=2
pkgdesc="Advanced drum machine."
arch=('x86_64')
license=('GPL2')
url="http://www.hydrogen-music.org/"
depends=('alsa-lib' 'flac' 'lash' 'jack' 'libarchive' 'libsndfile' 'qt' 'tar' 'zlib')
makedepends=('cmake')
categories=('multimedia')
changelog=ChangeLog
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$_pkgver.tar.gz)
md5sums=('8e1f36f1079ed77ddfb9c7afaa114e94')

build() {
msg "Compiling..."
  cd $srcdir/$pkgname-$_pkgver
#  mkdir build
  cd build
  cmake ../ \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DWANT_LASH=true \
    -DWANT_LIBARCHIVE=true
  make
}

package() {

msg "Installing..."
  cd $srcdir/$pkgname-$_pkgver/build
  make DESTDIR=${pkgdir} install

}
