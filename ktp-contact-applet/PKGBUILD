pkgname=ktp-contact-applet
pkgver=0.3.0
pkgrel=1
pkgdesc="Plasma applet for displaying contacts"
arch=('any')
url="http://www.kde.org"
license=('GPL')
depends=('kde-runtime' 'telepathy-qt' 'ktp-common-internals')
makedepends=('cmake' 'automoc4')
conflicts=('telepathy-kde-contact-applet')
replaces=('telepathy-kde-contact-applet')
provides=('telepathy-kde-contact-applet')
groups=('kde-telepathy')
categories=('utils' 'communication')
source=("ftp://mirrors.mit.edu/kde/unstable/kde-telepathy/${pkgver}/src/${pkgname}-${pkgver}.tar.gz")
sha1sums=('73e26ba7e09c9052b1325a2a79ec4aa8f452884a')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "${srcdir}"/build
  make DESTDIR="${pkgdir}" install
}