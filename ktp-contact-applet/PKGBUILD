pkgname=ktp-contact-applet
pkgver=0.3.0
pkgrel=1
pkgdesc="Plasma applet for displaying contacts"
arch=('any')
url="http://www.kde.org"
license=('GPL')
depends=('kde-runtime' 'telepathyQt')
makedepends=('cmake' 'automoc4')
conflicts=('telepathy-presence-applet')
replaces=('telepathy-presence-applet')
categories=('accessories')
groups=('telepathy-kde')
source=("ftp://mirrors.mit.edu/kde/unstable/telepathy-kde/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
sha1sums=('b1e2ad706deccd6ca4d745828a8b54fd87bc2066')

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  cmake . \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make DESTDIR="${pkgdir}" install
}