_origname=x-kit
pkgname=xkit
pkgver=0.4.2.2
pkgrel=1
pkgdesc="A kit to manipulate, parse and validate the X.org configuration file (/etc/X11/xorg.conf)"
arch=('x86_64')
url="https://launchpad.net/x-kit"
license=('GPL')
depends=('python2' 'xorg-server')
source=(http://launchpad.net/xorgparser/trunk/0.4.2/+download/$_origname-$pkgver.tar.gz
	https://launchpad.net/ubuntu/+archive/primary/+files/dontzap_0.1.2.tar.gz)
md5sums=('8ea51640362d13d304b405aba0b49275'
         '231847eedf4e68ae36cddc0ec745216a')

package() {
	# install xkit lib
	cd "$srcdir/xorgparser"
	python2 setup.py install --root=${pkgdir}
	
	# install dontzap
	cd "$srcdir/main"
	python2 setup.py install --root=${pkgdir}
}
