	conflicts=("kdemod-${_origname}-konsole")
	install=${_origname}-konsole.install

	splitdirs="konsole"
		for i in ${splitdirs} ; do
			cd ${srcdir}/${_origname}-${pkgver}/apps/${i}
			make DESTDIR=${pkgdir} install || return 1
		done
}

