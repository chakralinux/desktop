pkgname=focuswriter
pkgver=1.6.4
pkgrel=1
pkgdesc="A simple fullscreen word processor."
arch=('x86_64')
url="http://gottcode.org/$pkgname/"
screenshot="http://gottcode.org/focuswriter/screenshots/focuswriter_image.png"
license=('GPL3')
depends=('qt5-base' 'qt5-multimedia' 'hunspell')
makedepends=('qt5-tools')
categories=('office')
screenshot=("http://gottcode.org/focuswriter/screenshots/focuswriter_stats.png")
source=("http://gottcode.org/$pkgname/$pkgname-$pkgver-src.tar.bz2")
sha256sums=('1f019e75b5581d3e7ed96977e92c9a5f6eba8456eccbad1f481adaabae34055c')

build() {
  cd $pkgname-$pkgver
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make INSTALL_ROOT=$pkgdir install
}
