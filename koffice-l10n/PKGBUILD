    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  cd ../..

  install -d build/pt_BR
  cd build/pt_BR
  cmake ${srcdir}/koffice-l10n-pt_BR-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  cd ../..

  install -d build/ru
  cd build/ru
  cmake ${srcdir}/koffice-l10n-ru-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  cd ../..

