  cd build/tr
  cmake ${srcdir}/koffice-l10n-tr-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  cd ../..

  install -d build/uk
  cd build/uk
  cmake ${srcdir}/koffice-l10n-uk-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  cd ../..

  install -d build/wa
  cd build/wa
  cmake ${srcdir}/koffice-l10n-wa-${pkgver} \
