  cd build/nl
  cmake ${srcdir}/koffice-l10n-nl-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  cd ../..

  install -d build/pt
  cd build/pt
