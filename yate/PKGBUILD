pkgname=yate
pkgver=3.2.0
pkgrel=1
pkgdesc="Next-generation telephony engine, qt4 client for VoIP"
arch=('i686' 'x86_64')
url="http://yate.null.ro"
license=('GPL')
depends=('speex' 'gsm' 'postgresql-libs' 'libmysqlclient' \
         'alsa-lib')
makedepends=('pkgconfig')
source=(http://yate.null.ro/tarballs/yate3/${pkgname}-${pkgver}-${pkgrel}.tar.gz yate.init)
options=(!makeflags)

build() {
  cd $srcdir/${pkgname}
  export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --with-libpq \
              --with-mysql \
	      --without-openh323 

  make || return 1
  make DESTDIR=$pkgdir install
  install -D -m755 $srcdir/yate.init $pkgdir/etc/rc.d/yate || return 1
}

md5sums=('8ef5f0c420cb41ad2b5828fdba28c4ee'
         'c0d344607046c47c1d75ac23d323817a')


