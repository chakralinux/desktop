


# Maintainer Manuel Tortosa <manutortosa@chakra-project@org>

# Include global configuration
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

_pkgname="ksystemlog"
pkgname="kdeadmin-ksystemlog"
arch=('x86_64')
pkgver=${_kdever}
pkgrel=3
pkgdesc="Log viewer"
screenshot="http://www.kde.org/images/screenshots/ksystemlog.png"
depends=("kde-runtime>=${_kdever}")
groups=("kdeadmin" "kde" "kde-uninstall")
conflicts=("kdeadmin-doc")
categories=('system')
url="http://www.kde.org/"
license=('GPL' 'LGPL' 'FDL')
install=kdeadmin.install
options=('docs' '!header' 'debug' 'log')
makedepends=('pkg-config' 'cmake' 'automoc4' 'docbook-xsl')

source=("$_mirror/${_pkgname}-$_kdever.tar.xz" 
        "syslog-path.patch")
sha256sums=(`grep ${_pkgname}-$_kdever.tar.xz  ../checksums.txt | cut -d " " -f1`
          '20095ce6e0f3e5b6800a7c6e52de6fddba62c031')

build() {
  cd ${srcdir}/${_pkgname}-${pkgver}

  # msg "fixing syslog path"
  # patch -p1 -i ${srcdir}/syslog-path.patch

  cd ${srcdir}
  rm -rf build
  mkdir build && cd build

  cmake ../${_pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=${_build_type} \
        -DCMAKE_INSTALL_PREFIX=${_installprefix} \
        -DCMAKE_SKIP_RPATH=ON \
        -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed' 
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install 
}
sha256sums=('95b138831fc2258f36807b02a441c327189d0b68a7a15cc2908c7c8bfe29198e'
            '0bad624230db4c9805bc3854941b8518b0cc4744813659b86a6d93303aa48f53')
