_hkgname=syb
pkgname=haskell-syb
pkgver=0.4.1
pkgrel=1
pkgdesc="Scrap Your Boilerplate"
url="http://hackage.haskell.org/package/syb"
license=('custom:BSD3')
arch=('x86_64' 'i686')
makedepends=()
depends=('ghc=7.6.3-1' 'haskell-base>=4.0' 'haskell-base<5.0')
options=('strip')
source=("http://hackage.haskell.org/packages/archive/syb/0.4.1/syb-0.4.1.tar.gz")
install="haskell-syb.install"
sha512sums=('86a0a9af0a63f8cee32ef7b6d7a3ed06993c5adfffc5bf1a81a0ac0824245963162ee22b747fa7a15774a5edf0f1c21564e6c0f221d67a24d58f5faa615bd37f')

build() {
    cd "${srcdir}/syb-0.4.1"
    runhaskell Setup configure \
        -O \
        ${PKGBUILD_HASKELL_ENABLE_PROFILING:+-p } \
        --enable-split-objs \
        --enable-shared \
        --prefix="/usr" \
        --docdir="/usr/share/doc/haskell-syb" \
        --libsubdir='$compiler/site-local/$pkgid'
    runhaskell Setup build
    runhaskell Setup haddock
    runhaskell Setup register   --gen-script
    runhaskell Setup unregister --gen-script
    sed -i -r -e "s|ghc-pkg.*unregister[^ ]* |&'--force' |" unregister.sh
}

package() {
    cd "${srcdir}/syb-0.4.1"
    install -D -m744 register.sh \
        "${pkgdir}/usr/share/haskell/haskell-syb/register.sh"
    install -m744 unregister.sh \
        "${pkgdir}/usr/share/haskell/haskell-syb/unregister.sh"
    install -d -m755 "${pkgdir}/usr/share/doc/ghc/html/libraries"

    # Documentation
    ln -s "/usr/share/doc/haskell-syb/html" \
        "${pkgdir}/usr/share/doc/ghc/html/libraries/syb"

    # License
    install -D -m644 LICENSE \
        "${pkgdir}/usr/share/licenses/haskell-syb/LICENSE"
    rm -f "${pkgdir}/usr/share/doc/haskell-syb/LICENSE"

    runhaskell Setup copy --destdir="${pkgdir}"
}
