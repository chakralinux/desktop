pkgname=akonadi-qt5
_pkgname=akonadi
pkgver=5.0.40
pkgrel=2
pkgdesc="PIM layer, which provides an asynchronous API to access all kind of PIM data"
arch=('x86_64')
url='http://community.kde.org/KDE_PIM/Akonadi'
license=('LGPL')
depends=('shared-mime-info' 'mariadb')
makedepends=('extra-cmake-modules' 'libxslt' 'qt5-base' 'postgresql')
optdepends=('postgresql: PostgreSQL backend')
install="${pkgname}.install"
conflicts=('akonadi')
#source=("http://download.kde.org/stable/akonadi/src/akonadi-${pkgver}.tar.bz2")
source=("git://anongit.kde.org/akonadi")
md5sums=('SKIP')

prepare() {
  [ -d build ] && rm -r build
  mkdir build
}

build() {
  cd build
  cmake ../${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=/usr/lib \
    -DINSTALL_QSQLITE_IN_QT_PREFIX=TRUE \
    -DAKONADI_BUILD_TESTS=OFF \
    -DQT5_BUILD=ON \
    -DWITH_SOPRANO=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
