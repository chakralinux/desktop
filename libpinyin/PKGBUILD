# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=libpinyin
pkgver=0.5.0
pkgrel=1
pkgdesc="Library to deal with pinyin."
arch=('i686' 'x86_64')
url="https://github.com/libpinyin/libpinyin"
license=('GPL')
depends=('db')
makedepends=('automake' 'libtool' 'autoconf')
options=(!libtool)

source=(https://github.com/downloads/libpinyin/libpinyin/${pkgname}-${pkgver}.tar.gz)

md5sums=('09483a15479331af8704bbb25a179fe2')

build() {
  cd ${srcdir}/libpinyin-$pkgver

  (aclocal && libtoolize --force && autoheader && automake -a && autoconf) || return 1
  (./configure --prefix=/usr && make) || return 1
}

package() {
  cd ${srcdir}/libpinyin-$pkgver
  make DESTDIR=${pkgdir} install || return 1
}
