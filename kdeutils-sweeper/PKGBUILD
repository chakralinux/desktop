# Include global configuration
source ../kdeapps.conf

pkgname="kdeutils-sweeper"
_pkgname="sweeper"
arch=('x86_64')
pkgver=${_kdever}
pkgrel=1
pkgdesc="Clean unwanted traces the user leaves on the system"
url="http://www.kde.org"
license=('GPL' 'LGPL' 'FDL')
options=('docs' 'debug')
depends=("kde-runtime")
makedepends=('pkg-config' 'cmake' 'automoc4' "kdelibs>=${_libsver}" 'docbook-xsl')
conflicts=("kdeutils-common")
groups=("kde" "kdeutils" "kde-uninstall")
categories=('utils')
install=kdeutils.install
provides=("sweeper")
source=($_mirror/${_pkgname}-$_kdever.tar.xz{,.sig})
sha256sums=(`grep ${_pkgname}-$_kdever.tar.xz  ../kdeapps.sums | cut -d " " -f1`
                        'SKIP')
validpgpkeys=(${Avalidpgpkeys[@]})

build() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    cmake . \
        -DCMAKE_BUILD_TYPE=${_build_type} \
        -DCMAKE_INSTALL_PREFIX=${_installprefix} \
        -DCMAKE_SKIP_RPATH=ON \
        -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'
    make
}

package() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install
}
