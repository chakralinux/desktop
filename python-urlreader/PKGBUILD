# include global config
# source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=python-urlreader
_pkgname=urlreader
pkgver=0.0a0
_pkgver=437535c6bab7
pkgrel=1
pkgdesc="Simple Python package to download documents using HTTP."
arch=('i686' 'x86_64')
url="http://hg.mtjm.eu/urlreader/tags"
license=('GPL3')
depends=('python2' 'python-distribute')
makedepends=('setuptools')
categories=('network')
source=(http://hg.mtjm.eu/$_pkgname/archive/$_pkgver.tar.gz)
md5sums=('0a265bfc13ee66b13d78ce9df2cf2f20')

build() {
  cd $srcdir/$_pkgname-$_pkgver
}

package() {
  cd $srcdir/$_pkgname-$_pkgver

  export PYTHON="/usr/bin/python2"
  python2 setup.py install --root=$pkgdir/ --optimize=1
}
