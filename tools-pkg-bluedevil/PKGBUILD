# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=bluedevil
pkgver=1.0rc4
_ver=rc4-1
pkgrel=2
pkgdesc='The new bluetooth stack for KDE, itâ€™s composed of: KCM, KDED, KIO, Library and some other small applications'
arch=('i686' 'x86_64')
url="http://gitorious.org/bluedevil"
license=('GPL')
depends=('kdelibs' 'libbluedevil>=1.0' 'obex-data-server' 'obexd-client') # kdebase-workspace
makedepends=('cmake')
provides=(bluedevil)
conflicts=(bluedevil-git)

source=("http://www.afiestas.org/files/bluedevil-v$pkgver-$pkgrel.tgz")
md5sums=("c967bce0edd20c2937db5071c7b735df")

build(){
  cd ${srcdir}

  mkdir -p build
  cd build

  cmake ../$pkgname-$_ver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
