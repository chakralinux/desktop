pkgname=synaptiks
pkgver=0.6.2
pkgrel=1
pkgdesc="A touchpad tool for KDE."
arch=('i686' 'x86_64')
url="http://synaptiks.lunaryorn.de/"
license=('BSD')
depends=('xf86-input-synaptics' 'libxi>=1.3' 'pyqt' 'kdebindings-python>=4.5' 'python-udev' 'kdesdk-scripts' 'python-distribute')
makedepends=('gettext' 'docbook-xsl')
source=(http://pypi.python.org/packages/source/s/synaptiks/$pkgname-$pkgver.tar.bz2)
md5sums=('e893a155bf8ca0bdbdbcd11061bafae8')

build() {
  cd $srcdir/$pkgname-$pkgver

  python2 setup.py install --single-version-externally-managed  --prefix=/usr --root=$pkgdir
}

