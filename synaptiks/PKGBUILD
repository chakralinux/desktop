pkgname=synaptiks
pkgver=0.5.1
pkgrel=1
pkgdesc="A touchpad tool for KDE."
arch=('i686' 'x86_64')
url="http://synaptiks.lunaryorn.de/"
license=('BSD')
depends=('xf86-input-synaptics' 'libxi>=1.3' 'pyqt' 'kdebindings-python>=4.5' 'python-udev')
makedepends=('setuptools' 'gettext' 'docbook-xsl')
source=(http://pypi.python.org/packages/source/s/synaptiks/$pkgname-$pkgver.tar.gz)
md5sums=('61cba22ae8730a7db7aff99a883c40ae')

build() {
  cd $srcdir/$pkgname-$pkgver

  python2 setup.py install --single-version-externally-managed  --prefix=/usr --root=$pkgdir
}

