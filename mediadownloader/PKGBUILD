pkgname=mediadownloader
pkgver=1.5.1
_pkgver=1.5.1-3
pkgrel=2
pkgdesc="Application for searching images and videos in the Internet."
arch=('i686' 'x86_64')
url="http://mediadownloader.cz.cc/"
license=('GPL3')
depends=('qt' 'phonon')
makedepends=('mesa')
source=("http://sourceforge.net/projects/googleimagedown/files/project/$_pkgver/${pkgname}_${_pkgver}-src.tar.gz"
         $pkgname.desktop)
md5sums=('c0cb4e74fb1285ac22e7781101d419a4'
         'f1ea77cda5e96091fbfc944e7142eb5b')

build() {
  cd $srcdir/${pkgname}-${pkgver}

  qmake
  make
}

package() {
  cd $srcdir/${pkgname}-${pkgver}
  make INSTALL_ROOT=$pkgdir install
}
