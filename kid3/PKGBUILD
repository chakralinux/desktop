pkgname=kid3
pkgver=3.2.1
pkgrel=1
pkgdesc="An MP3, Ogg/Vorbis and FLAC tag editor for KDE"
arch=('x86_64')
url="http://kid3.sourceforge.net/"
license=('GPL')
depends=('id3lib' 'kde-runtime' 'libmp4v2' 'chromaprint' 'ffmpeg')
makedepends=('automoc4' 'cmake' 'taglib' 'docbook-xsl' 'docbook-xml' 'phonon')
categories=('multimedia')
screenshot=('http://pkgs.org/images/linux-software/kid3/kid3-screenshot.png')
install=${pkgname}.install
source=("http://sourceforge.net/projects/$pkgname/files/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz")
sha256sums=('da686929b5329f910b96b4fd1a10d490ffac4a604be22a795405460871afe494')

build() {
  mkdir -p build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DWITH_APPS="CLI;KDE" \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release 
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
