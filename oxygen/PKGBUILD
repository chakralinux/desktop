# Contributor: Andrea Scarpino <andrea@archlinux.org>

source ../plasma.conf

pkgname=oxygen
pkgver=${PVersion}
pkgrel=1
pkgdesc="Oxygen"
arch=('x86_64')
url='projects.kde.org/'
license=('LGPL')
depends=('frameworkintegration' 'kwin')
makedepends=('extra-cmake-modules')
checkdepends=("cmake")
groups=('plasma')
options=("debug")
source=("${PServer}/${pkgver}/${pkgname}-${PSubVersion}.tar.xz")
sha256sums=( $(getSum ${pkgname} | head -n 1) )

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake_kf5 ../${pkgname}-${PSubVersion}
  make
}

check() {
  cd build
  make test || return 0
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
