# Contributor: Andrea Scarpino <andrea@archlinux.org>

source ../plasma.conf

pkgname=oxygen
pkgver=${PVersion}
pkgrel=1
pkgdesc="Oxygen"
arch=('x86_64')
url='projects.kde.org/'
license=('LGPL')
depends=('qt5-base' 'frameworkintegration' 'kwindowsystem' 'kwidgetsaddons' 'kcompletion' 'kservice' 'kguiaddons' 'kwin')
makedepends=('extra-cmake-modules')
checkdepends=("cmake")
groups=('plasma')
options=("debug")
source=("${PServer}/${pkgver}/${pkgname}-${PSubVersion}.tar.xz")
sha256sums=( $(getSum ${pkgname} | head -n 1) )

prepare() {
  mkdir -p build
}

build() {
  cd build
  #cmake ../${pkgname}-${pkgver} \
  cmake ../${pkgname}-${PSubVersion} \
    -DCMAKE_BUILD_TYPE=${PBuildType} \
    -DCMAKE_INSTALL_PREFIX=${PInstallPrefix} \
    -DLIB_INSTALL_DIR=lib 
  make
}

check() {
  cd build
  make test || return 0
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
