pkgname=dos2unix
pkgver=7.2.1
pkgrel=1
pkgdesc='Text file format converter'
arch=('x86_64')
url='http://waterlan.home.xs4all.nl/dos2unix.html'
screenshot='https://d3hzxuizpdmi2q.cloudfront.net/-SbEMau_IdI1.png'
license=('BSD')
makedepends=('perl')
conflicts=('hd2u')
source=("http://waterlan.home.xs4all.nl/${pkgname}/${pkgname}-${pkgver}.tar.gz")
sha512sums=('63053a5146a18496aed690948850c0f86f9f6a70259d33363a71ec3981ab5b01f20951b338f400d688bc4e4296f944a034dc4f92646a34203cad73c203e41152')

build() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make
}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
  install -D -m644 COPYING.txt "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}

