pkgname=dos2unix
pkgver=7.2.3
pkgrel=1
pkgdesc='Text file format converter'
arch=('x86_64')
url='http://waterlan.home.xs4all.nl/dos2unix.html'
screenshot='https://d3hzxuizpdmi2q.cloudfront.net/-SbEMau_IdI1.png'
license=('BSD')
makedepends=('perl')
conflicts=('hd2u')
source=("http://waterlan.home.xs4all.nl/${pkgname}/${pkgname}-${pkgver}.tar.gz")
sha512sums=('8b999538d99cbcc2e08ceb7bee13f0b6bc382e01c3d769f07c8b7c908398ae43d6ef164e7247aa4193686ff9fecb7fce3be22f53321b4ef06ebf7a1639619b6c')

build() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make
}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
  install -D -m644 COPYING.txt "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}

