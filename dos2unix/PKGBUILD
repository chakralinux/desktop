pkgname=dos2unix
pkgver=7.1
pkgrel=1
pkgdesc='Text file format converter'
arch=('x86_64')
url='http://waterlan.home.xs4all.nl/dos2unix.html'
screenshot='https://d3hzxuizpdmi2q.cloudfront.net/-SbEMau_IdI1.png'
license=('BSD')
makedepends=('perl')
conflicts=('hd2u')
source=("http://waterlan.home.xs4all.nl/${pkgname}/${pkgname}-${pkgver}.tar.gz")
sha512sums=('fe4feaff6c2cc851d596c9a440d0863c89353b434e85a7ffaa2538da56f44488476c2674f372ba256d215421af2290c98ab78da019b4f6a0150d1d15d041a54e')

build() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make
}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
  install -D -m644 COPYING.txt "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}

