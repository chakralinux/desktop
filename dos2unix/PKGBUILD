pkgname=dos2unix
pkgver=7.3
pkgrel=1
pkgdesc='Text file format converter'
arch=('x86_64')
url='http://waterlan.home.xs4all.nl/dos2unix.html'
screenshot='https://d3hzxuizpdmi2q.cloudfront.net/-SbEMau_IdI1.png'
license=('BSD')
makedepends=('perl')
conflicts=('hd2u')
source=("http://waterlan.home.xs4all.nl/${pkgname}/${pkgname}-${pkgver}.tar.gz")
sha512sums=('dc70fc4cf12811794e9b33db7cc44085788450104f7beefacea5ac11af5ca76d909235232be51eb7a32ed5d75a01a86a4c6b064060b945c8a7e7968caeb51cea')

build() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make
}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
  install -D -m644 COPYING.txt "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}

