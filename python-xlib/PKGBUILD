pkgbase=python-xlib
pkgname=('python3-xlib' 'python2-xlib')
_pkgname=python-xlib
pkgver=0.20
pkgrel=1
pkgdesc='A fully functional X client library for Python programs.'
url='http://python-xlib.sourceforge.net/'
arch=('any')
license=('GPL')
makedepends=('python2' 'python3' 'python2-setuptools' 'python3-setuptools')
source=("https://github.com/python-xlib/${pkgbase}/archive/${pkgver}.tar.gz")
md5sums=('dd048e22e4c5d44551cb2c0541efd117')

package_python2-xlib() {
  depends+=('python2')
  provides=('python-xlib')
  conflicts=('python-xlib')
  replaces=('python-xlib')
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python2 setup.py install --root="${pkgdir}"
}

package_python3-xlib() {
  depends+=('python3')
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python3 setup.py install --root="${pkgdir}"
}
