# maintainer (x86_64): Manuel Tortosa <manutortosa[at]chakra-project[dot]org>

# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=digikam
pkgver=2.0.0
pkgrel=1
pkgdesc="Digital photo management application for kde"
arch=('i686' 'x86_64')
license=('GPL')
url="http://digikam.sourceforge.net"
depends=('kde-runtime' 'kdegraphics-kgamma' 'kdepimlibs' 'lensfun' 'kdeedu-marble' 'liblqr' 'kipi-plugins')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'doxygen' 'docbook-xsl')
source=(http://sourceforge.net/projects/digikam/files/${pkgname}/${pkgver}/${pkgname}-${pkgver}.tar.bz2)
replaces=('digikamimageplugins')
install=digikam.install
md5sums=('7b1ab69fc2fb36a45dc3ca38b01d42d8')

build() {
   cd ${srcdir}

   mkdir -p build
   cd build
   cmake ../${pkgname}-${pkgver} \
     -DCMAKE_INSTALL_PREFIX=/usr \
     -DENABLE_MARBLEWIDGET=yes \
     -DWITH_MarbleWidget=yes \
     -DCMAKE_SKIP_RPATH=ON
   make 
}

package() {
  cd "${srcdir}"/build
  make DESTDIR="${pkgdir}" install
}
