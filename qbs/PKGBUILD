pkgname=qbs
pkgver=1.10.0
pkgrel=1
pkgdesc='Cross platform build tool'
arch=('x86_64')
url='https://wiki.qt.io/Qbs'
license=('LGPL')
depends=('qt5-base' 'qt5-script')
source=($pkgname-$pkgver.tar.gz::"https://github.com/qbs/qbs/archive/v$pkgver.tar.gz")
sha256sums=('c4d93a6f2b1cdd886aa3f215f4339ae47fdc43618ef4cb30c7ebeb5aec481de9')

build() {
  cd qbs-$pkgver
  qmake-qt5 QBS_INSTALL_PREFIX=/usr \
    QBS_LIBEXEC_INSTALL_DIR=/usr/lib/qbs \
    QBS_RELATIVE_LIBEXEC_PATH=../lib/qbs \
    CONFIG+=qbs_enable_project_file_updates \
    qbs.pro
  make
}

package() {
  cd qbs-$pkgver
  make INSTALL_ROOT="${pkgdir}" install
}
