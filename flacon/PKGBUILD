pkgname=flacon
pkgver=1.0.1
pkgrel=1
pkgdesc="Tool to extract individual tracks from one big audio file."
arch=('x86_64')
url="http://flacon.github.io/"
license=('GPL3')
screenshot="http://wiki.flacon.googlecode.com/hg/imgs/flacon-1-small.png"
depends=('uchardet' 'shntool' 'qt')
makedepends=('cmake')
optdepends=('flac: for encoding and decoding FLAC files'
            'mac: for APE support'
            'ttaenc: for TrueAudio support'
            'lame: for MP3 support'
            'mp3gain: for MP3 Replay Gain support'
            'vorbis-tools: for OGG support'
            'vorbisgain: for OGG Replay Gain support'
            'wavpack: for WavPack support')
categories=('multimedia')
source=(https://github.com/$pkgname/$pkgname/archive/v$pkgver.tar.gz)
sha512sums=('711a03492bd4938dd3aa60567fbbb23b55e55de9f0391bdb9b264739cd3219121c012da3264aec7cbeae18f68ad52e0d26557d4d87082964719355f608ec3fb6')

build() {
  cd $srcdir/$pkgname-$pkgver
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr \
	   -DBUILD_TESTS=Yes
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver/build
  make DESTDIR=$pkgdir install
}
