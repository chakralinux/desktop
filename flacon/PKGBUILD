# Maintainer: FranzMari <franzmari[at]chakra-project[dot]it>

pkgname=flacon
pkgver=0.9.1
pkgrel=1
pkgdesc="Tool to extract individual tracks from one big audio file."
arch=('x86_64')
url="http://code.google.com/p/flacon/"
license=('GPL3')
screenshot="http://wiki.flacon.googlecode.com/hg/imgs/flacon-1-small.png"
depends=('shntool')
makedepends=('cmake' 'qt' 'uchardet')
optdepends=('flac: for encoding and decoding FLAC files'
            'mac: for APE support'
            'ttaenc: for TrueAudio support'
            'lame: for MP3 support'
            'mp3gain: for MP3 Replay Gain support'
            'vorbis-tools: for OGG support'
            'vorbisgain: for OGG Replay Gain support'
            'wavpack: for WavPack support')
categories=('multimedia')
source=(https://github.com/SokoloffA/$pkgname/archive/v$pkgver.tar.gz)
md5sums=('064ec7c74e872900256cdb00b0451577')

build() {
  cd $srcdir/$pkgname-$pkgver
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr \
	   -DBUILD_TESTS=Yes
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  cd build
  make DESTDIR=$pkgdir install
}
