# Original contributor: Martin Cigorraga Muller <msx (@) archlinux (dot) us>

pkgname=kdeplasma-addons-applets-minimalclock
pkgver=0.12
pkgrel=2
pkgdesc="A minimalistic clock with configurable font and text color."
arch=('x86_64')
url='http://kde-apps.org/content/show.php/Minimal+Clock?content=156715'
license=('GPL')
depends=('kde-workspace')
source=("http://kde-apps.org/CONTENT/content-files/156715-minimal_clock.plasmoid")
md5sums=('7e0bbc72e514f759702d0d297801c207')
screenshot="http://i.imgur.com/mSOyBna.jpg"
install='minimalclock.install'


package() {
  cd "${srcdir}/"
  install_folder="${pkgdir}/usr/share/apps/plasma/plasmoids/minimalclock/"
  install -d "${install_folder}"/contents/
  install -d "${install_folder}"/contents/{config,ui}
  install -m644 minimal_clock/metadata.desktop "${install_folder}"
  install -m644 minimal_clock/contents/config/main.xml "${install_folder}"/contents/config/
  install -m644 minimal_clock/contents/ui/* "${install_folder}"/contents/ui/
  install -Dm644 minimal_clock/metadata.desktop \
    "${pkgdir}"/usr/share/kde4/services/plasma-applet-minimalclock.desktop 
}
