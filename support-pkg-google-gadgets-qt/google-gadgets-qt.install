pre_install() {
  local __file="/usr/lib/pkgconfig/mozilla-js.pc"
  if [ -f "${__file}.bak" ]; then
    mv "${__file}.bak" "${__file}"
  fi
}

post_install() {
  echo
  echo -n "==> Updating desktop and mime database..."
  update-desktop-database -q
  echo "done"
}

post_remove() {
  post_install
}

