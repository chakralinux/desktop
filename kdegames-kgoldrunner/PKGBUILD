# Maintainer: Manuel Tortosa <manutortosa@chakra-project@org>

# Include global configuration
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdegames-kgoldrunner
_pkgname=kgoldrunner
pkgver=${_kdever}
pkgrel=3
pkgdesc="A game of action and puzzle-solving"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=("kdegames-libkdegames>=${_kdever}" "openal")
makedepends=('pkg-config' 'cmake' 'automoc4')
source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
sha256sums=(`grep ${_pkgname}-$_kdever.tar.xz  ../checksums.txt | cut -d " " -f1`)
groups=("kde" "kdegames" "kde-uninstall")
provides=('kgoldrunner')
options=('docs' '!header' 'debug' 'log')

build() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
                -DCMAKE_INSTALL_PREFIX=${_installprefix} \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'

}

package() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install

}
sha256sums=('7b028d2cf1dc0d45c457c54d15639ac262eb45a9fb8c0782a7533326cbaf45d4')
