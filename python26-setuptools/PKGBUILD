# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

_pkgname=setuptools
pkgname=python26-setuptools
pkgver=0.6c11
pkgrel=1
pkgdesc="A collection of enhancements to the Python distutils."
license=('PSF')
arch=(i686 x86_64)
url="http://peak.telecommunity.com/DevCenter/setuptools"
depends=('python26')
provides=("setuptools=${pkgver}")
replaces=("setuptools")
conflicts=("setuptools")
source=("http://cheeseshop.python.org/packages/source/s/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
md5sums=('7df2a529a074f613b509fb44feefe74e')

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"

  mkdir -p "${pkgdir}/usr/lib/python2.6/site-packages"
  python2.6 setup.py install --root="${pkgdir}" || return 1
  echo "/usr/lib/python2.6/site-packages/${pkgname}-${pkgver}-py2.6.egg" > "${pkgdir}/usr/lib/python2.6/site-packages/setuptools.pth"
}

