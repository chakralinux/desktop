


# Maintainer: Manuel Tortosa <manutortosa@chakra-project@org>

# Include global configuration
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdegames-libkdegames
_pkgname=libkdegames
pkgver=${_kdever}
pkgrel=3
pkgdesc="Shared libraries for KDE games"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=("kdelibs>=${_kdever}")
makedepends=('pkg-config' 'cmake' 'automoc4')
source=("$_mirror/${_pkgname}-$_kdever.tar.xz")
sha256sums=(`grep ${_pkgname}-$_kdever.tar.xz  ../checksums.txt | cut -d " " -f1`)
groups=("kde" "kdegames" "kde-uninstall")
conflicts=('kdegames-common')
replaces=('kdegames-common')
provides=('kdeganes-common')
options=('docs' '!header' 'debug' 'log')

build() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	cmake . -DCMAKE_BUILD_TYPE=${_build_type} \
                -DCMAKE_INSTALL_PREFIX=${_installprefix} \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed'

}

package() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install || return 1

}
sha256sums=('2c18b9680bcb080854776fef9a7f5e08bc859c5900325f20d83ac2ffe88270f3')
