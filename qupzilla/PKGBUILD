# Contributor: Neophytos Kolokotronis <tetris4@gmail.com>

pkgname=qupzilla
pkgver=1.0.1
pkgrel=6
pkgdesc="A very fast open source browser based on WebKit core"
url="http://qt-apps.org/content/show.php?content=14569"3
arch=('i686' 'x86_64')
license=('GPL3')
depends=('qt')
source=(https://github.com/nowrep/QupZilla/tarball/master/nowrep-QupZilla-v1.0.0-rc1-0-g4f92505.tar.gz)
md5sums=('89d19b3d7412020f3fef5691651970d8')

build() {
   cd $srcdir/nowrep-QupZilla-4f92505/src/
   export USE_WEBGL="true"
   qmake QupZilla.pro
   make
}

package() {
   cd $srcdir/nowrep-QupZilla-4f92505/src/
   make INSTALL_ROOT=$pkgdir install

}