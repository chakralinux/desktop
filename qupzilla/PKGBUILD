# Contributor: Neophytos Kolokotronis <tetris4@gmail.com>

pkgname=qupzilla
pkgver=1.1.5
pkgrel=1
pkgdesc="A very fast open source browser based on WebKit core"
url="http://qt-apps.org/content/show.php?content=14569"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('qt')
source=(https://github.com/nowrep/QupZilla/tarball/master/nowrep-QupZilla-v1.1.5-0-g43a0295.tar.gz)
md5sums=('329b1ad5847cd521a7ad9690d936ab10')

build() {
   cd $srcdir/nowrep-QupZilla-01c67f9/
   export USE_WEBGL="true"
   export KDE="true"
   qmake QupZilla.pro
   make
}

package() {
   cd $srcdir/nowrep-QupZilla-01c67f9/
   make INSTALL_ROOT=$pkgdir install

}