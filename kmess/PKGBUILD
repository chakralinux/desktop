# maintainer (x86_64): Manuel Tortosa <manutortosa[at]chakra-project[dot]org>

pkgname=kmess
pkgver=2.0.6
pkgrel=1
pkgdesc="KMess is a MSN Messenger client for Linux."
arch=('i686' 'x86_64')
url="http://kmess.sourceforge.net/"
license=('GPL')
depends=('libxss' 'libxslt' 'giflib' 'kdebase-runtime' 'xdg-utils' 'qt')
makedepends=('automoc4' 'cmake' 'docbook-xsl')
optdepends=('cabextract: provides winks support')
install=kmess.install
source=("http://sourceforge.net/projects/kmess/files/Latest%20versions/$pkgver/kmess-$pkgver.tar.gz")
md5sums=('bae11d47474f1c44a99aa24d8ae42010')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}

