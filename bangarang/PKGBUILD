# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=bangarang
pkgver=1.0.1
pkgrel=3
pkgdesc="Simple KDE media player."
arch=('i686' 'x86_64')
url="http://bangarangkde.wordpress.com/"
license=('GPL3')
depends=('kdelibs>=4.3' 'soprano' 'taglib>=1.5' 'kdemultimedia-common')
makedepends=('cmake' 'automoc4')
source=(http://opendesktop.org/CONTENT/content-files/113305-$pkgname-$pkgver.tar.gz)
md5sums=('266d4590882d55fd7bebae1001e3bad1')

build() {
  cd $srcdir/$pkgname-$pkgname

  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make DESTDIR=$pkgdir install
}
