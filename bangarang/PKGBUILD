pkgname=bangarang
pkgver=2.0
pkgrel=1
pkgdesc="Simple KDE media player."
arch=('i686' 'x86_64')
url="http://bangarangkde.wordpress.com/"
license=('GPL3')
depends=('kdelibs>=4.5.5' 'kdebase-runtime>=4.5.5' 'soprano' 'taglib>=1.5')
makedepends=('cmake' 'automoc4')
source=(http://opendesktop.org/CONTENT/content-files/113305-$pkgname-$pkgver.tar.gz)
md5sums=('f7229ec389e4481b34a42398b246a504')

build() {
  cd $srcdir/$pkgname-$pkgname

  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make DESTDIR=$pkgdir install
}
