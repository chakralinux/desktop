pkgname=opal
pkgver=3.10.4
_pkgver="Stable 4"
_pkgver2="v3.10 Luyten"
pkgrel=1
pkgdesc="Open Phone Abstraction Library."
arch=('i686' 'x86_64')
url="http://www.opalvoip.org/"
license=('MPL')
depends=('libtheora' 'ptlib' 'silc-toolkit' 'speex' 'x264>=20090416')
makedepends=('ffmpeg')
changelog=ChangeLog
source=("http://downloads.sourceforge.net/project/opalvoip/$_pkgver2/$_pkgver/$pkgname-$pkgver.tar.bz2")
md5sums=('62f0f5d03d948f28e62ded7d585de229')

build() {
  cd $srcdir/$pkgname-$pkgver
  CFLAGS="$CFLAGS -D__STDC_CONSTANT_MACROS" \
  ./configure \
    --localstatedir=/var \
    --prefix=/usr \
    --sysconfdir=/etc
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
