# maintainer (i686): Phil Miller <philm[at]chakra-project[dog]org>
# maintainer (x86_64): Manuel Tortosa <manutortosa[at]chakra-project[dot]org>

pkgname=ccr
pkgver=3.0
pkgrel=1
pkgdesc="Bash wrapper for pacman and the CCR"
url="http://github.com/bruenig/ccr"
license="GPL"
arch=('any')
makedepends=('git')
depends=('grep' 'sed' 'coreutils' 'bash' 'wget' 'pacman' 'autoconf' 'automake' 'bin86' 'bison' 'ed' 'fakeroot' 'flex' 'gcc' 'libtool' 'm4' 'make' 'patch' 'pkgconfig')
optdepends=('sudo: install and update packages as non-root'
            'pacman-color: colorized output')
#source=("http://chakra-project.org/sources/ccr/ccr-$pkgver.tar.xz"
source=("http://chakra.sourceforge.net/sources/ccr/ccr-$pkgver.tar.gz"
	"ccr-vote")
md5sums=('8e70b44c956dd4e3d9876fb34c7323eb'
         'c888f773a869e09d6ec484394d2fcd35')

# source PKGBUILD && _create-tarball
_create-tarball() {
    mkdir -p "ccr"
    git clone git://github.com/bruenig/packer.git "ccr"
    tar -cJf ccr-$pkgver.tar.xz "ccr"
    md5sum "ccr-$pkgver.tar.xz"
    rm -rf "ccr"
}

build() {
    cd "$srcdir/ccr-$pkgver"
 
    install -m 755 -D ccr "$pkgdir/usr/bin/ccr"
    install -m 644 -D ccr.8 "$pkgdir/usr/share/man/man8/ccr.8"
    
    cd $srcdir
    install -m 775 -D ccr-vote "$pkgdir/usr/bin/ccr-vote"
}
