# contributor Neo Kolokotronis <tetris4@gmail.com>

pkgname=trojita
pkgver=0.3
pkgrel=1
pkgdesc="Trojita is a Qt IMAP e-mail client."
arch=('i686' 'x86_64')
url="http://trojita.flaska.net"
license=('GPL')
depends=('qt')
makedepends=('make')
categories=('network')
source=("http://sourceforge.net/projects/trojita/files/src/${pkgname}-${pkgver}.tar.bz2/download"
        'trojita.desktop')
md5sums=('b0ebf69765b9e33ef43ff22624e4f23e'
         '65a0b9d19e7641dfc73670fecc488975')

build() {
  cd "${srcdir}"
  mkdir -p build && cd build
  qmake "${srcdir}/${pkgname}-${pkgver}/trojita.pro"
        make
}

package() {
  cd "${srcdir}/build"
  install -D -m755 src/Gui/trojita "${pkgdir}/usr/bin/trojita"
    
  # Desktop Icon
  cd "${srcdir}/${pkgname}-${pkgver}/src/icons"
  install -D -m644 trojita.png "${pkgdir}/usr/share/pixmaps/trojita.png"
  install -D -m644 "${srcdir}/trojita.desktop" "${pkgdir}/usr/share/applications/trojita.desktop"
}

