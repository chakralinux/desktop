# Maintainer: Neophytos Kolokotronis <tetris4@gmail.com>

pkgname=kamoso
pkgver=2.0.3.3
pkgrel=4
pkgdesc="Kamoso is an application to take pictures and videos out of your webcam."
url="https://projects.kde.org/projects/extragear/multimedia/kamoso/"
arch=('x86_64')
license=('GPL')
depends=('kde-runtime' 'qt-gstreamer' 'kdegraphics-libkipi')
makedepends=('cmake' 'git' 'automoc4')
conflicts=('kamoso-git')
categories=('multimedia')
screenshot=('http://kde-apps.org/CONTENT/content-pre1/111750-1.png')
source=("${pkgname}-${pkgver}.tar.bz2"::"http://quickgit.kde.org/?p=kamoso.git&a=snapshot&h=93188573e21a4c839f346a67431155c16f01828a&fmt=tbz2")
sha256sums=('6fa17195fe854217891594dbb66152360b9667c54cf15dc7e6df595c551cbfcc')

# create tarball: source PKGBUILD && mksource
