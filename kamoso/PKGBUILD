#  md5sum kamoso-${pkgver}.tar.xz
#}


build() {
    cd ${pkgname}
    cmake . \
    -DCMAKE_INSTALL_PREFIX=$(kde4-config --prefix) \
    -DCMAKE_BUILD_TYPE=Release 
    make 
}

package(){
  cd ${pkgname}
  make DESTDIR="${pkgdir}" install
}
