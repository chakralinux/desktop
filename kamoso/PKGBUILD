build() {
    cd "$srcdir/$pkgname"
    cmake ${srcdir}/$pkgname \
    -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` \
    -DCMAKE_BUILD_TYPE=Release 
    make 
}

package(){
  cd "${srcdir}/$pkgname"
  make DESTDIR="$pkgdir" install
}
