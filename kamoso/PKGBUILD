pkgname=kamoso
pkgver=2.0.3.3
pkgrel=3
pkgdesc="Kamoso is an application to take pictures and videos out of your webcam."
url="https://projects.kde.org/projects/extragear/multimedia/kamoso/"
arch=('x86_64')
license=('GPL')
depends=('kde-runtime' 'qt-gstreamer' 'kdegraphics-libkipi')
makedepends=('cmake' 'git' 'automoc4')
conflicts=('kamoso-git')
categories=('multimedia')
screenshot=('http://kde-apps.org/CONTENT/content-pre1/111750-1.png')
source=("$pkgname-$pkgver.tar.bz2"::"http://quickgit.kde.org/?p=kamoso.git&a=snapshot&h=060845e7e13114fa422e8107687aabac8f70a118&fmt=tbz2")
md5sums=('bbcc2846fa9c804d93565023ffcd8ade')

