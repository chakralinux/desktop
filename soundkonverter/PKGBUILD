pkgname=soundkonverter
pkgver=1.1.0
pkgrel=1
pkgdesc="soundKonverter is a frontend to various audio converters"
arch=('i686' 'x86_64')
url="http://www.kde-apps.org/content/show.php?content=29024"
license=('GPL')
depends=('kdemultimedia-common' 'taglib')
makedepends=('cmake' 'automoc4')
replaces=('soundKonverter-kde')
provides=('soundKonverter-kde')
source=("http://kde-apps.org/CONTENT/content-files/29024-"${pkgname}-"${pkgver}.tar.gz")
md5sums=('cf7c6dde265937e3211dd1e5b98ae46f')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
	cd "${srcdir}"/build
	make DESTDIR="${pkgdir}" install
}
 