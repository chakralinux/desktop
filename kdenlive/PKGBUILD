# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kdenlive
pkgver=0.8
pkgrel=2
pkgdesc="A non-linear video editor for Linux"
arch=('i686' 'x86_64')
url="http://www.kdenlive.org/"
license=('GPL')
depends=('kdelibs>=4.4.5' 'mlt>=0.7.0' 'dvgrab' 'kdebase-runtime' 'frei0r-plugins>=1.3')
optdepends=("dvdauthor: for creating dvds"
	    "recordmydesktop: for desktop-recordings")
makedepends=('automoc4' 'cmake' 'gettext')
source=(http://downloads.sourceforge.net/kdenlive/kdenlive-$pkgver.tar.gz)
md5sums=('26170b4360285e8a7bf53fd122d8854e')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  export LDFLAGS="$LDFLAGS -lX11"

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DLIB_INSTALL_DIR=/usr/lib -DLINK_LIBRARIES=-lX11
  make || return 1
  make DESTDIR="$pkgdir" install
}
