pkgname=qtractor
pkgver=0.6.7
pkgrel=1
pkgdesc="Audio/MIDI multitrack sequencer"
arch=('x86_64')
url="http://qtractor.sourceforge.net/"
screenshot=("http://kde-apps.org/CONTENT/content-pre1/56325-1.png")
license=('GPL')
depends=('qt' 'jack' 'slv2' 'libmad' 'libsamplerate' 'rubberband' 'liblo')
makedepends=('ladspa' 'dssi')
categories=('multimedia')
source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('787757fba50723dcbadf230b78458820')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package () {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
  install -d ${pkgdir}/usr/share/pixmaps
  cp ${pkgdir}/usr/share/icons/hicolor/scalable/apps/qtractor.svg \
  ${pkgdir}/usr/share/pixmaps/qtractor.svg
}
