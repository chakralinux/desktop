pkgname=qtractor
pkgver=0.7.3
pkgrel=2
pkgdesc="Audio/MIDI multitrack sequencer"
arch=('x86_64')
url="http://qtractor.sourceforge.net/"
screenshot=("http://kde-apps.org/CONTENT/content-pre1/56325-1.png")
license=('GPL')
depends=('qt5-base' 'qt5-x11extras' 'jack' 'libmad' 'libsamplerate' 'rubberband' 'liblo')
makedepends=('ladspa' 'dssi' 'qt5-tools')
categories=('multimedia')
source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz")
sha256sums=('872eca726c28e10c264ab75ad6eeb370323adf7ecb7f8bca04137b5f4f12c4ef')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr \
	      --enable-qt5 \
	      --disable-lv2-ui-gtk2
  make
}

package () {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
  install -d ${pkgdir}/usr/share/pixmaps
  cp ${pkgdir}/usr/share/icons/hicolor/scalable/apps/qtractor.svg \
  ${pkgdir}/usr/share/pixmaps/qtractor.svg
}
