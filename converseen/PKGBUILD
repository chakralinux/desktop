pkgname=converseen
pkgver=0.9.5
_pkgver=${pkgver%.*}
pkgrel=1
pkgdesc="The batch image converter and resizer. It supports more than 100 image formats."
arch=('x86_64')
url="http://converseen.sourceforge.net/"
license=('GPL3')
categories=('graphics')
depends=('imagemagick' 'qt5-base' 'libwmf' 'openexr' 'fftw')
makedepends=('cmake' 'qt5-tools')
source=("http://downloads.sourceforge.net/project/${pkgname}/Converseen/Converseen%20$_pkgver/${pkgname}-${pkgver}.tar.bz2")
screenshot=('http://converseen.sourceforge.net/res/converseen1.png')
sha1sums=('41271c22c388940f7fa10660a0f354332c41d374')

build() {
  cd "${srcdir}"
  mkdir -p build && cd build
  cmake ../${pkgname} \
          -DCMAKE_BUILD_TYPE=Release \
          -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/build"

  make DESTDIR="${pkgdir}" install
}
